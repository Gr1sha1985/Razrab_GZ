	|	Документ.ПоступлениеНаРасчетныйСчет.РасшифровкаПлатежа КАК ПоступлениеНаРасчетныйСчетРасшифровкаПлатежа
	|ГДЕ
	|	НЕ ПоступлениеНаРасчетныйСчетРасшифровкаПлатежа.Ссылка.ПометкаУдаления
	|	И ПоступлениеНаРасчетныйСчетРасшифровкаПлатежа.Ссылка.ВидОперации В (&СписокВидовОперацийПоступление)
	|	И ПоступлениеНаРасчетныйСчетРасшифровкаПлатежа.НомерСтроки = 2
	|
	|ОБЪЕДИНИТЬ ВСЕ
	|
	|ВЫБРАТЬ ПЕРВЫЕ 1
	|	СписаниеСРасчетногоСчетаРасшифровкаПлатежа.Ссылка
	|ИЗ
	|	Документ.СписаниеСРасчетногоСчета.РасшифровкаПлатежа КАК СписаниеСРасчетногоСчетаРасшифровкаПлатежа
	|ГДЕ
	|	НЕ СписаниеСРасчетногоСчетаРасшифровкаПлатежа.Ссылка.ПометкаУдаления
	|	И СписаниеСРасчетногоСчетаРасшифровкаПлатежа.Ссылка.ВидОперации В (&СписокВидовОперацийСписание)
	|	И СписаниеСРасчетногоСчетаРасшифровкаПлатежа.НомерСтроки = 2";
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Если НЕ РезультатЗапроса.Пустой() Тогда
		Константы.ИспользоватьТабличныеФормыБанковскихДокументов.Установить(Истина);
	КонецЕсли;

КонецПроцедуры

Процедура УстановитьКонстантуИспользоватьВалютныйУчетОтложенно(Параметры) Экспорт

	ВалютныйУчетИспользуетсяФактически = ОбщегоНазначенияБП.ИспользуетсяВалютныйУчет();
	Если ВалютныйУчетИспользуетсяФактически Тогда
		
		Параметры.ОбработкаЗавершена = Истина;
		Возврат;
		
	КонецЕсли;
	
	ВалютныйУчетИспользуетсяФактически = ОбщегоНазначенияБП.ИспользуетсяВалютныйУчет(Истина);
	Если ВалютныйУчетИспользуетсяФактически Тогда
		// В информационной базе могла сложиться ситуация, что в данных используются ссылки только на валюты,
		// помеченные на удаление. А на валюты, непомеченные на удаление, ссылок нет. Тогда мы не должны помечать
		// никакие валюты на удаление, чтобы валютный учёт по-прежнему был включен.
		ПомечатьВалютыНаУдаление = Ложь;
	Иначе
		ПомечатьВалютыНаУдаление = Истина;
	КонецЕсли;
	
	// Отключаем для существующих валют загрузку из интернета и очищаем ранее загруженные курсы.
	
	ВалютаРегламентированногоУчета = ОбщегоНазначенияБПВызовСервераПовтИсп.ПолучитьВалютуРегламентированногоУчета();
	
	Запрос = Новый Запрос(
	"ВЫБРАТЬ ПЕРВЫЕ 1000
	|	КурсыВалют.Период КАК Период,
	|	КурсыВалют.Валюта КАК Валюта
	|ИЗ
	|	РегистрСведений.КурсыВалют КАК КурсыВалют
	|ГДЕ
	|	КурсыВалют.Валюта <> &ВалютаРегламентированногоУчета
	|	И КурсыВалют.Период >= &НачалоКорректногоПериода
	|
	|УПОРЯДОЧИТЬ ПО
	|	Валюта,
	|	Период");
	Запрос.УстановитьПараметр("ВалютаРегламентированногоУчета", ВалютаРегламентированногоУчета);
	Запрос.УстановитьПараметр("НачалоКорректногоПериода", 
		ОбщегоНазначенияБПСобытия.КорректныйПериодВводаДокументов().НачалоКорректногоПериода);
	
	ПроблемныхОбъектов = 0;
	ОбъектовОбработано = 0;
	
	НачатьТранзакцию();
	
	Выборка = Запрос.Выполнить().Выбрать();
	Если Выборка.Количество() = 0 Тогда
		
		// Осталось только пометить все валюты на удаление.
		Выборка = Справочники.Валюты.Выбрать();
		Пока Выборка.Следующий() Цикл
			
			Если Выборка.Ссылка = ВалютаРегламентированногоУчета
			 Или Выборка.ПометкаУдаления Тогда
				Продолжить;
			КонецЕсли;
			
			Валюта = Выборка.ПолучитьОбъект();
			Валюта.ПометкаУдаления = ПомечатьВалютыНаУдаление;
			Валюта.ЗагружаетсяИзИнтернета = Ложь;
			Если Валюта.СпособУстановкиКурса = Перечисления.СпособыУстановкиКурсаВалюты.ЗагрузкаИзИнтернета Тогда
				Валюта.СпособУстановкиКурса = Перечисления.СпособыУстановкиКурсаВалюты.РучнойВвод;
			КонецЕсли;
			Попытка
				
				// Выполнение обработчиков при записи валюты, имеет смысл, только если включен учет по договорам.
				ВключитьБизнесЛогику = Константы.ВестиУчетПоДоговорам.Получить();
				ОбновлениеИнформационнойБазы.ЗаписатьДанные(Валюта, Ложь, ВключитьБизнесЛогику);
				ОбъектовОбработано = ОбъектовОбработано + 1;
				ЗафиксироватьТранзакцию();
				
			Исключение
				// Если не удалось пометить валюту на удаление, повторим попытку снова при следующем запуске обработчика.
				ПроблемныхОбъектов = ПроблемныхОбъектов + 1;
				ОтменитьТранзакцию();
				
				ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
					НСтр("ru = 'Не удалось пометить на удаление %1 по причине:
						|%2'"),
						Валюта.Ссылка,
						ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
				ЗаписьЖурналаРегистрации(ОбновлениеИнформационнойБазы.СобытиеЖурналаРегистрации(), 
					УровеньЖурналаРегистрации.Предупреждение,
					Метаданные.Справочники.Валюты,
					Валюта.Ссылка,
					ТекстСообщения);
					
			КонецПопытки;
			НачатьТранзакцию();	
			
		КонецЦикла;
		
		ЗафиксироватьТранзакцию();
		Параметры.ОбработкаЗавершена = (ПроблемныхОбъектов = 0);
		
		Если ПомечатьВалютыНаУдаление И Параметры.ОбработкаЗавершена Тогда
			
			// Отключаем использование валютного учета в информационной базе.
			ВалютныйУчет = Константы.ИспользоватьВалютныйУчет.СоздатьМенеджерЗначения();
			ВалютныйУчет.Значение = Ложь;
			Попытка
			
				ОбновлениеИнформационнойБазы.ЗаписатьДанные(ВалютныйУчет, Ложь, Истина);
				
				ЗаписьЖурналаРегистрации(ОбновлениеИнформационнойБазы.СобытиеЖурналаРегистрации(), 
					УровеньЖурналаРегистрации.Информация,
					Метаданные.Константы.ИспользоватьВалютныйУчет,,
					НСтр("ru = 'Процедура УстановитьКонстантуИспользоватьВалютныйУчетОтложенно
						|отключила использование валютного учета в информационной базе.'"));
				
			Исключение
				
				ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
					НСтр("ru = 'Не удалось отключить использование валютного учета по причине:
						|%1'"),
						ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
				ЗаписьЖурналаРегистрации(ОбновлениеИнформационнойБазы.СобытиеЖурналаРегистрации(), 
					УровеньЖурналаРегистрации.Предупреждение,
					Метаданные.Константы.ИспользоватьВалютныйУчет,,
					ТекстСообщения);
				Параметры.ОбработкаЗавершена = Ложь;
				
			КонецПопытки;
					
		КонецЕсли;

		Возврат;
		
	КонецЕсли;

	Параметры.ОбработкаЗавершена = Ложь;
	КурсыВалют = РегистрыСведений.КурсыВалют.СоздатьНаборЗаписей();
	ТекущаяВалюта = Неопределено;
	
	Пока Выборка.Следующий() Цикл
		
		Если ТекущаяВалюта <> Выборка.Валюта Тогда
			
			Если ТекущаяВалюта <> Неопределено Тогда
				
				// Фиксируем, что курсы по валюте удалены.
				ЗафиксироватьТранзакцию();
				
				// Помечаем валюту на удаление.
				Валюта = ТекущаяВалюта.ПолучитьОбъект();
				Если Не Валюта.ПометкаУдаления
				 Или Валюта.ЗагружаетсяИзИнтернета
				 Или Валюта.СпособУстановкиКурса = Перечисления.СпособыУстановкиКурсаВалюты.ЗагрузкаИзИнтернета Тогда
				 
					Валюта.ПометкаУдаления = Валюта.ПометкаУдаления Или ПомечатьВалютыНаУдаление;
					Валюта.ЗагружаетсяИзИнтернета = Ложь;
					Если Валюта.СпособУстановкиКурса = Перечисления.СпособыУстановкиКурсаВалюты.ЗагрузкаИзИнтернета Тогда
						Валюта.СпособУстановкиКурса = Перечисления.СпособыУстановкиКурсаВалюты.РучнойВвод;
					КонецЕсли;
					Попытка
						
						// Выполнение обработчиков при записи валюты, имеет смысл, только если включен учет по договорам.
						ВключитьБизнесЛогику = Константы.ВестиУчетПоДоговорам.Получить();
						ОбновлениеИнформационнойБазы.ЗаписатьДанные(Валюта, Ложь, ВключитьБизнесЛогику);
						
					Исключение
						// Если не удалось пометить валюту на удаление, повторим попытку снова при следующем запуске обработчика.
						
						ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
							НСтр("ru = 'Не удалось пометить на удаление %1 по причине:
								|%2'"),
								ТекущаяВалюта,
								ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
						ЗаписьЖурналаРегистрации(ОбновлениеИнформационнойБазы.СобытиеЖурналаРегистрации(), 
							УровеньЖурналаРегистрации.Предупреждение,
							Метаданные.Справочники.Валюты,
							ТекущаяВалюта,
							ТекстСообщения);
							
					КонецПопытки;
						
				КонецЕсли;	
			
				НачатьТранзакцию();
				
			КонецЕсли;
			ТекущаяВалюта = Выборка.Валюта;
			
		КонецЕсли;
		
		Попытка
			
			КурсыВалют.Отбор.Период.Установить(Выборка.Период);
			КурсыВалют.Отбор.Валюта.Установить(Выборка.Валюта);
			ОбновлениеИнформационнойБазы.ЗаписатьДанные(КурсыВалют);
			ОбъектовОбработано = ОбъектовОбработано + 1;
			
		Исключение
			// Если не удалось обработать какой-либо курс валюты, повторим попытку снова при следующем запуске обработчика.
			ПроблемныхОбъектов = ПроблемныхОбъектов + 1;
			
			ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
				НСтр("ru = 'Не удалось очистить курс %1 по состоянию на %2 по причине:
					|%3'"),
					Выборка.Валюта,
					Формат(Выборка.Период, "ДЛФ=D"),
					ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
			ЗаписьЖурналаРегистрации(ОбновлениеИнформационнойБазы.СобытиеЖурналаРегистрации(), 
				УровеньЖурналаРегистрации.Предупреждение,
				Метаданные.РегистрыСведений.КурсыВалют,
				Выборка.Валюта,
				ТекстСообщения);
				
		КонецПопытки;
		
	КонецЦикла;
	
	Если ПроблемныхОбъектов = 0 И ОбъектовОбработано < 1000
	   И ТекущаяВалюта <> Неопределено Тогда
		// По последней валюте были успешно очищены все курсы. Можно пометить её на удаление.
		// Иначе валюты будут помечены на удаление при следущем запуске этой процедуры.
		// В любом случае нужно ещё отключить использование валютного учета при следущем запуске этой процедуры.
	   
		// Фиксируем, что порция курсов по валюте удалена.
		ЗафиксироватьТранзакцию();
	   
		Валюта = ТекущаяВалюта.ПолучитьОбъект();
		Если Не Валюта.ПометкаУдаления
		 Или Валюта.ЗагружаетсяИзИнтернета
		 Или Валюта.СпособУстановкиКурса = Перечисления.СпособыУстановкиКурсаВалюты.ЗагрузкаИзИнтернета Тогда
		 
			Валюта.ПометкаУдаления = Валюта.ПометкаУдаления Или ПомечатьВалютыНаУдаление;
			Валюта.ЗагружаетсяИзИнтернета = Ложь;
			Если Валюта.СпособУстановкиКурса = Перечисления.СпособыУстановкиКурсаВалюты.ЗагрузкаИзИнтернета Тогда
				Валюта.СпособУстановкиКурса = Перечисления.СпособыУстановкиКурсаВалюты.РучнойВвод;
			КонецЕсли;
			Попытка
				
				// Выполнение обработчиков при записи валюты, имеет смысл, только если включен учет по договорам.
				ВключитьБизнесЛогику = Константы.ВестиУчетПоДоговорам.Получить();
				ОбновлениеИнформационнойБазы.ЗаписатьДанные(Валюта, Ложь, ВключитьБизнесЛогику);
				
			Исключение
				// Если не удалось пометить валюту на удаление, повторим попытку снова при следующем запуске обработчика.
				
				ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
					НСтр("ru = 'Не удалось пометить на удаление %1 по причине:
						|%2'"),
						ТекущаяВалюта,
						ПодробноеПредставлениеОшибки(ИнформацияОбОшибке()));
				ЗаписьЖурналаРегистрации(ОбновлениеИнформационнойБазы.СобытиеЖурналаРегистрации(), 
					УровеньЖурналаРегистрации.Предупреждение,
					Метаданные.Справочники.Валюты,
					ТекущаяВалюта,
					ТекстСообщения);
					
			КонецПопытки;
				
		КонецЕсли;
		
	Иначе
		
		Если ОбъектовОбработано = 0 Тогда 
			// Никаких изменений не вносилось.
			ОтменитьТранзакцию();
		Иначе
			// Фиксируем, что порция курсов по валюте удалена.
			ЗафиксироватьТранзакцию();
		КонецЕсли;
		
	КонецЕсли;
	
	Если ОбъектовОбработано = 0 Тогда
		
		ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Процедуре УстановитьКонстантуИспользоватьВалютныйУчетОтложенно
				|не удалось очистить некоторые курсы: %1'"),
				ПроблемныхОбъектов);
		ВызватьИсключение ТекстСообщения;
		
	Иначе
		
		ЗаписьЖурналаРегистрации(ОбновлениеИнформационнойБазы.СобытиеЖурналаРегистрации(), 
			УровеньЖурналаРегистрации.Информация,
			Метаданные.Справочники.Валюты,,
			СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
				НСтр("ru = 'Процедура УстановитьКонстантуИспользоватьВалютныйУчетОтложенно
					|очистила очередную порцию курсов валют: %1'"), ОбъектовОбработано));

	КонецЕсли;

КонецПроцедуры

/////////////////////////////////////////////////////////////////////////////////
// Формирование макета описания изменений в зависимости от функциональности

// Удаляем из исходного макета строки соотвествующие выключенным функциональным опциям
Процедура СформироватьМакетПоФункциональнымОпциям(Макет, Схема) Экспорт
	
	СтрокиУсловиеИстина = Новый Массив; // Строки для которых хотя бы одна опция установлена в ИСТИНА
	СтрокиУсловиеЛожь   = Новый Массив; // Строки для которых все опции установлены в ЛОЖЬ

	// Рассортируем все строки на два списка.
	// Строки по которым выполянется хотя бы одно условие, и те по которые не выполняется ни одно.
	Для каждого ЭлементСхемы Из Схема Цикл
		
		СтрокиМакета = СтрРазделить(ЭлементСхемы.ДобавляемыеСтроки, ",", Ложь);
		Для каждого Элемент Из СтрокиМакета Цикл
			
			НомерСтрокиМакета = Число(Элемент);
			
			ЭлементИстина = СтрокиУсловиеИстина.Найти(НомерСтрокиМакета);
			// Если выполняется хотя бы одно условие - то дальнейшая проверка не нужна
			Если ЭлементИстина <> Неопределено Тогда
				Продолжить;
			КонецЕсли; 
			
			ЭлементЛожь   = СтрокиУсловиеЛожь.Найти(НомерСтрокиМакета);
			Если ЭлементСхемы.ЗначениеОпции Тогда
				СтрокиУсловиеИстина.Добавить(НомерСтрокиМакета);
				
				// Исключим строку из списка удаляемых, если она туда попала ранее
				Если ЭлементЛожь <> Неопределено Тогда
					СтрокиУсловиеЛожь.Удалить(ЭлементЛожь);
				КонецЕсли; 
			ИначеЕсли ЭлементЛожь = Неопределено Тогда
				СтрокиУсловиеЛожь.Добавить(НомерСтрокиМакета);
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЦикла;
	
	ИсключаемыеСтроки   = Новый СписокЗначений;
	ИсключаемыеСтроки.ЗагрузитьЗначения(СтрокиУсловиеЛожь);
	
	Если ИсключаемыеСтроки.Количество()> 0 Тогда
		// Применяем обратную сортировку, чтобы при удалении областей номера строк не изменялись.
		ИсключаемыеСтроки.СортироватьПоЗначению(НаправлениеСортировки.Убыв);
		
		ПоследняяСтрока = ИсключаемыеСтроки[0].Значение;
		ПерваяСтрока = ИсключаемыеСтроки[0].Значение;
		КоличествоСтрок = ИсключаемыеСтроки.Количество()-1;
		
		Для каждого Строка Из ИсключаемыеСтроки Цикл
			
			// Если следующая удаляемая строка примыкает к предыдущей, то удаляем блоком для оптимизации
			Если ПерваяСтрока - Строка.Значение > 1 Тогда
			
				УдаляемаяОбласть = Макет.Область(ПерваяСтрока, ,ПоследняяСтрока);
				Макет.УдалитьОбласть(УдаляемаяОбласть, ТипСмещенияТабличногоДокумента.ПоВертикали);
				
				ПоследняяСтрока = Строка.Значение;
				
			КонецЕсли; 
			
			ПерваяСтрока = Строка.Значение;
		
		КонецЦикла; 
		
		УдаляемаяОбласть = Макет.Область(ПерваяСтрока, ,ПоследняяСтрока);
		Макет.УдалитьОбласть(УдаляемаяОбласть, ТипСмещенияТабличногоДокумента.ПоВертикали);
		
	КонецЕсли; 
	// Удаляем служебную область со списком опций
	Макет.УдалитьОбласть(Макет.Область(, 3, , 3), ТипСмещенияТабличногоДокумента.ПоГоризонтали);

КонецПроцедуры

// Добавляет номер строки к тем опциям, которые на нее влияют
Процедура ДобавитьОпцииПоСтроке(СхемаДокумента, НомерСтроки, СписокОпций)
	МетаданныеФункциональныхОпций = Метаданные.ФункциональныеОпции;
	
	МассивОпций = СтрРазделить(СписокОпций, ",", Ложь);
	
	Для каждого ИмяОпции Из МассивОпций Цикл
	
		СписокСтрокПоОпции = СхемаДокумента.НайтиСтроки(Новый Структура("ИмяОпции", ИмяОпции));
		Если СписокСтрокПоОпции.Количество() = 0 Тогда
			Строка = СхемаДокумента.Добавить();
			Строка.ИмяОпции = ИмяОпции;
		Иначе
			Строка = СписокСтрокПоОпции[0];
		КонецЕсли;
		
		МассивСтрокПоОпции = СтрРазделить(Строка.ДобавляемыеСтроки, ",", Ложь);
		МассивСтрокПоОпции.Добавить(НомерСтроки);
		
		Строка.ДобавляемыеСтроки = СтрСоединить(МассивСтрокПоОпции, ",");
	
	КонецЦикла;

КонецПроцедуры

// Процедура формирует схему макета - таблицу содержащую функциональные опции и строки к которым они применимы
Функция СхемаМакетаОписанияОбновлений(Макет)

	СхемаМакета = Новый ТаблицаЗначений;
	СхемаМакета.Колонки.Добавить("ИмяОпции", Новый ОписаниеТипов("Строка"));
	СхемаМакета.Колонки.Добавить("ЗначениеОпции", Новый ОписаниеТипов("Булево"));
	СхемаМакета.Колонки.Добавить("ДобавляемыеСтроки", Новый ОписаниеТипов("Строка"));
	
	// Таким фоном выделяются заголовки в макете, для разделения по уровням заголовка используем размер шрифта.
	ЦветЗаголовка = Новый Цвет(192, 192, 192);
	
	// Опции действуют иерархично, если у строки есть набор опции то применяются они
	// иначе применяются опции вышестоящий уровней, заголовков разделов и подразделов
	СписокОпцийУровень1 = "";
	СписокОпцийУровень2 = "";
	
	Для НомерСтроки = 1 По Макет.ВысотаТаблицы Цикл
		
		ОбластьТекст = Макет.Область(НомерСтроки, 2, НомерСтроки, 2);
		ОбластьОпции = Макет.Область(НомерСтроки, 3, НомерСтроки, 3);
	
		СписокОпций = ОбластьОпции.Текст;
		
		Если ОбластьТекст.ЦветФона = ЦветЗаголовка Тогда
		
			Если ОбластьТекст.Шрифт.Размер = 12 Тогда // заголовок верхнего уровня
				СписокОпцийУровень1 = СписокОпций;
				СписокОпцийУровень2 = "";
			Иначе
				СписокОпцийУровень2 = СписокОпций;
			КонецЕсли; 
		
		КонецЕсли; 
		
		Если ЗначениеЗаполнено(СписокОпций) Тогда
			ДобавитьОпцииПоСтроке(СхемаМакета,НомерСтроки, СписокОпций);
		ИначеЕсли ЗначениеЗаполнено(СписокОпцийУровень2) Тогда
			ДобавитьОпцииПоСтроке(СхемаМакета, НомерСтроки,СписокОпцийУровень2);
		ИначеЕсли ЗначениеЗаполнено(СписокОпцийУровень1) Тогда
			ДобавитьОпцииПоСтроке(СхемаМакета, НомерСтроки,СписокОпцийУровень1);
		КонецЕсли; 
		
	КонецЦикла;
	
	Возврат СхемаМакета;

КонецФункции 

