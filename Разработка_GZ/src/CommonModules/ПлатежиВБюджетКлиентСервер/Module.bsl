Функция ИсправитьЗначенияРеквизитов(Знач ИмяИзмененногоРеквизита, Реквизиты, Контекст, УстановитьЗначенияПоУмолчанию = Ложь, Изменения = Неопределено) Экспорт
	
	ИнициализироватьИзменения(Изменения);
	
	ЗависимыеРеквизиты = ВсеЗависимыеРеквизиты(ИмяИзмененногоРеквизита);
	
	Для каждого ИмяРеквизита Из ЗависимыеРеквизиты Цикл
		
		ДопустимыеЗначения = ДопустимыеЗначенияРеквизита(
			ИмяРеквизита,
			Реквизиты,
			Контекст);
		
		ПривестиЗначение(
			Реквизиты,
			Изменения,
			ИмяРеквизита,
			ДопустимыеЗначения,
			УстановитьЗначенияПоУмолчанию);
		
	КонецЦикла;
	
	Возврат Изменения;
	
КонецФункции

Функция ЗначенияПоУмолчанию(Контекст) Экспорт
	
	ЗначенияПоУмолчанию = Новый Структура;
	ЗначенияПоУмолчанию.Вставить("КБК",           Контекст.КБК);
	ЗначенияПоУмолчанию.Вставить("КодТерритории", Контекст.КодТерритории);
	Если ЗначениеЗаполнено(Контекст.ВидПеречисления) Тогда
		ЗначенияПоУмолчанию.Вставить("ВидПеречисления", Контекст.ВидПеречисления);
	ИначеЕсли ЗначениеЗаполнено(Контекст.НомерСчетаПолучателя)
		И ЭтоСчетИсполнителяГосуслуг(Контекст.НомерСчетаПолучателя, Контекст.Период) Тогда
		ЗначенияПоУмолчанию.Вставить("ВидПеречисления", ПредопределенноеЗначение("Перечисление.ВидыПеречисленийВБюджет.ИнойПлатеж"));
	Иначе
		ЗначенияПоУмолчанию.Вставить("ВидПеречисления", ПредопределенноеЗначение("Перечисление.ВидыПеречисленийВБюджет.НалоговыйПлатеж"));
	КонецЕсли;
	
	ЗначенияПоУмолчанию.Вставить("НалоговыйПериод",    Контекст.ПоказательПериода);
	ЗначенияПоУмолчанию.Вставить("НазначениеПлатежа",  Контекст.НазначениеПлатежа);
	ЗначенияПоУмолчанию.Вставить("ОчередностьПлатежа", Контекст.ОчередностьПлатежа);
	
	ЗначенияПоУмолчанию = НовыйРеквизитыПлатежаВБюджет(ЗначенияПоУмолчанию);
	
	ИсправитьЗначенияРеквизитов(
		"ВидПеречисления", // См. ЗависимыеРеквизиты()
		ЗначенияПоУмолчанию,
		Контекст,
		Истина);
	
	Возврат ЗначенияПоУмолчанию;
	
КонецФункции

Процедура ЗаполнитьДопустимымиЗначениями(Реквизиты, ДанныеЗаполнения, Контекст) Экспорт
	
	Для каждого ИмяРеквизита Из ВсеЗависимыеРеквизиты() Цикл
		
		Если НЕ ДанныеЗаполнения.Свойство(ИмяРеквизита) Тогда
			Продолжить;
		КонецЕсли;
		
		ЗначениеДоИзменения     = Реквизиты[ИмяРеквизита];
		Значение                = ДанныеЗаполнения[ИмяРеквизита];
		Реквизиты[ИмяРеквизита] = Значение;
		
		ДопустимыеЗначения = ДопустимыеЗначенияРеквизита(ИмяРеквизита, Реквизиты, Контекст);
		
		Если НЕ ЗначениеВСпискеДопустимых(Значение, ДопустимыеЗначения) Тогда
			Реквизиты[ИмяРеквизита] = ЗначениеДоИзменения;
			Продолжить;
		КонецЕсли;
		
		ИсправитьЗначенияРеквизитов(
			ИмяРеквизита,
			Реквизиты,
			Контекст,
			Ложь);
		
	КонецЦикла;
	
КонецПроцедуры

Функция ДопустимыеЗначенияРеквизита(ИмяРеквизита, Реквизиты, Контекст)
	
	Если ИмяРеквизита = "ВидПеречисления" Тогда
		
		Возврат ВидПеречисления(Реквизиты.КБК, Контекст.Период);
		
	ИначеЕсли ИмяРеквизита = "КодТерритории" Тогда
		
		Возврат ДопустимыйКодТерритории(Реквизиты.КодТерритории, Реквизиты.ВидПеречисления, Контекст.НомерСчетаПолучателя,
			Контекст.КодТерриторииПоУмолчанию, Контекст.Период);
		
	ИначеЕсли ИмяРеквизита = "СтатусПлательщика" Тогда
		
		Период = Мин(Контекст.ПериодПлатежа, Контекст.Период);
		Возврат ДопустимыеСтатусыПлательщика(Реквизиты, Контекст.ФизическоеЛицо, Контекст.НалоговыйАгент, Период);
		
	ИначеЕсли ИмяРеквизита = "ТипПлатежа" Тогда
		
		Возврат ДопустимыеТипыПлатежа(Реквизиты, Контекст.Период);
		
	ИначеЕсли ИмяРеквизита = "ОснованиеПлатежа" Тогда
		
		Возврат ДопустимыеОснованияПлатежа(Реквизиты, Контекст.Период);
		
	ИначеЕсли ИмяРеквизита = "НалоговыйПериод" Тогда
		
		Возврат ДопустимыйНалоговыйПериод(Реквизиты, Контекст.Период);
		
	ИначеЕсли ИмяРеквизита = "НомерДокумента" Тогда
		
		Возврат ДопустимыеНомераДокумента(Реквизиты, Контекст.Период);
		
	ИначеЕсли ИмяРеквизита = "ДатаДокумента" Тогда
		
		Возврат ДопустимаяДатаДокумента(Реквизиты, Контекст.Период);
		
	Иначе
		Возврат Неопределено;
	КонецЕсли;
	
КонецФункции

Процедура ОтметитьНезаполненноеЗначение(Значение) Экспорт
	
	Если ТипЗнч(Значение) = Тип("Строка") И ПустаяСтрока(Значение) Тогда
		Значение = НезаполненноеЗначение();
	КонецЕсли;
	
КонецПроцедуры

Процедура ОтметитьНезаполненныеЗначения(Реквизиты) Экспорт
	
	Для каждого КлючИЗначение Из Реквизиты Цикл
		ПравильноеЗначение = КлючИЗначение.Значение;
		ОтметитьНезаполненноеЗначение(ПравильноеЗначение);
		Реквизиты[КлючИЗначение.Ключ] = ПравильноеЗначение;
	КонецЦикла;
	
КонецПроцедуры

Функция РеквизитЗаполнен(Значение) Экспорт
	
	Возврат ЗначениеЗаполнено(Значение) И СокрП(Значение) <> НезаполненноеЗначение();
	
КонецФункции

Функция ВсеЗависимыеРеквизиты(ИмяРеквизита = Неопределено) Экспорт
	
	ЗависимыеРеквизиты = Новый Массив;
	
	ЗаполнитьЗависимыеРеквизитыРекурсивно(ЗависимыеРеквизиты, ИмяРеквизита);
	
	Возврат ЗависимыеРеквизиты;
	
КонецФункции

Процедура ПроверитьИсправитьНедопустимыеРеквизитыПлатежаВБюджет(Знач ВидПеречисления,
		Знач Период,
		СтатусСоставителя,
		ПоказательОснования) Экспорт
	
	Если Не ПлатежиВБюджетКлиентСервер.ДействуетПриказ2020_199н_Отложенный(Период) Тогда
		Возврат;
	КонецЕсли;
	
	ИсправитьСтатусСоставителя(Период, СтатусСоставителя);
	
	ИсправитьПоказательОснования(ВидПеречисления, Период, ПоказательОснования);
	
КонецПроцедуры

Процедура ИсправитьСтатусСоставителя(Знач Период, СтатусСоставителя) Экспорт
	
	Если Не ЗначениеЗаполнено(СтатусСоставителя) Тогда
		Возврат;
	КонецЕсли;
	
	АктуальныеСтатусы = СтатусыПлательщика(Период).ВыгрузитьЗначения();
	Если ЗначениеЗаполнено(СтатусСоставителя) И АктуальныеСтатусы.Найти(СтатусСоставителя) = Неопределено Тогда
		Статусы = УстаревшиеСтатусыФизлица();
		Если Статусы.Найти(СтатусСоставителя) <> Неопределено Тогда
			СтатусСоставителя = ПлатежиВБюджетКлиентСервер.СтатусНалогоплательщикаФизЛицо();
		Иначе
			СтатусСоставителя = ПлатежиВБюджетКлиентСервер.СтатусПлательщикаИныеПлатежи();
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

Процедура ИсправитьПоказательОснования(Знач ВидПеречисления, Знач Период, ПоказательОснования) Экспорт
	
	Если Не ЗначениеЗаполнено(ПоказательОснования) Тогда
		Возврат;
	КонецЕсли;
	
	АктуальныеОснованияПлатежаНалог = ОснованияНалоговогоПлатежа(Период).ВыгрузитьЗначения();
	
	АктуальныеОснованияПлатежаТаможня = ОснованияТаможенногоПлатежа(Период).ВыгрузитьЗначения();
	
	Если ВидПеречисления = ПредопределенноеЗначение("Перечисление.ВидыПеречисленийВБюджет.НалоговыйПлатеж")
		И АктуальныеОснованияПлатежаНалог.Количество() > 0
		И АктуальныеОснованияПлатежаНалог.Найти(ПоказательОснования) = Неопределено Тогда
		ПоказательОснования = АктуальныеОснованияПлатежаНалог[0];
	ИначеЕсли ВидПеречисления = ПредопределенноеЗначение("Перечисление.ВидыПеречисленийВБюджет.ТаможенныйПлатеж")
		И АктуальныеОснованияПлатежаТаможня.Количество() > 0
		И АктуальныеОснованияПлатежаТаможня.Найти(ПоказательОснования) = Неопределено Тогда
		ПоказательОснования = АктуальныеОснованияПлатежаТаможня[0];
	КонецЕсли;
	
КонецПроцедуры

// Служебные

Процедура ПривестиЗначение(Реквизиты, Изменения, ИмяРеквизита, ДопустимыеЗначения, УстановитьЗначениеПоУмолчанию)
	
	Значение            = Реквизиты[ИмяРеквизита];
	ЗначениеДопустимо   = ЗначениеВСпискеДопустимых(Значение, ДопустимыеЗначения);
	ЗначениеПоУмолчанию = ЗначениеПоУмолчанию(ДопустимыеЗначения);
	
	Если ЗначениеДопустимо И УстановитьЗначениеПоУмолчанию Тогда
		ЗначениеДопустимо = (Значение = ЗначениеПоУмолчанию);
	КонецЕсли;
	
	Если ЗначениеДопустимо Тогда
		Возврат;
	КонецЕсли;
	
	Реквизиты.Вставить(ИмяРеквизита, ЗначениеПоУмолчанию);
	Изменения.Вставить(ИмяРеквизита, ЗначениеПоУмолчанию);
	
КонецПроцедуры

Функция ЗначениеВСпискеДопустимых(Значение, ДопустимыеЗначения)
	
	Если ДопустимыеЗначения = Неопределено Тогда
		Возврат Истина;
