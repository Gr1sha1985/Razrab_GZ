Функция НовыйРеквизитыПлатежаВБюджет(Основание = Неопределено) Экспорт
	
	Возврат НовыйСтруктура(РеквизитыПлатежаВБюджет(), Основание);
	
КонецФункции

Функция НовыйКонтекст(Основание = Неопределено) Экспорт
	
	Контекст = НовыйСтруктура(ПоляКонтекста(), Основание);
	
	Контекст.Период             = '0001-01-01';
	Контекст.ПериодПлатежа      = '0001-01-01';
	Контекст.ПоказательПериода  = "";
	Контекст.НазначениеПлатежа  = "";
	Контекст.ОчередностьПлатежа = 0;
	Контекст.ВидПеречисления    = ПредопределенноеЗначение("Перечисление.ВидыПеречисленийВБюджет.ПустаяСсылка");
	// Типы значений остальных свойств могут быть разными в разных решениях
	
	Возврат Контекст;
	
КонецФункции

#КонецОбласти

#Область Соглашения

Функция РеквизитыПлатежаВБюджет() Экспорт
	
	Реквизиты = Новый Массив;
	
	Реквизиты.Добавить("ВидПеречисления");       // Служебный, определяет правила оформления платежки
	Реквизиты.Добавить("ИдентификаторПлатежа");  // 22
	Реквизиты.Добавить("СтатусПлательщика");     // 101
	Реквизиты.Добавить("КБК");                   // 104
	Реквизиты.Добавить("КодТерритории");         // 105
	Реквизиты.Добавить("ОснованиеПлатежа");      // 106
	Реквизиты.Добавить("НалоговыйПериод");       // 107
	Реквизиты.Добавить("НомерДокумента");        // 108
	Реквизиты.Добавить("ДатаДокумента");         // 109
	Реквизиты.Добавить("ТипПлатежа");            // 110 (не заполняется с 01.01.2015)
	Реквизиты.Добавить("НазначениеПлатежа");     // 24
	Реквизиты.Добавить("ОчередностьПлатежа");    // 21
	
	Возврат Реквизиты;
	
КонецФункции

Функция КраткоеПредставление(РеквизитыПлатежаВБюджет, Период) Экспорт
	
	ОсобыеСлучаи = Новый Структура;
	
	Если Не РеквизитЗаполнен(РеквизитыПлатежаВБюджет.КБК) Тогда
		ОсобыеСлучаи.Вставить("КБК", НСтр("ru = '<КБК не указан>'"));
	КонецЕсли;
	
	Если Не РеквизитЗаполнен(РеквизитыПлатежаВБюджет.КодТерритории) Тогда
		ПредставлениеКодТерритории = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = '<%1 не указан>'"),
			ЗаголовокКодаТерритории(Период));
		ОсобыеСлучаи.Вставить("КодТерритории", ПредставлениеКодТерритории);
	КонецЕсли;
	
	Если Не РеквизитЗаполнен(РеквизитыПлатежаВБюджет.СтатусПлательщика) Тогда
		ПредставлениеСтатусПлательщика = НСтр("ru = '<Статус: не указан>'");
	Иначе
		ПредставлениеСтатусПлательщика = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Статус: %1'"),
			РеквизитыПлатежаВБюджет.СтатусПлательщика);
	КонецЕсли;
	ОсобыеСлучаи.Вставить("СтатусПлательщика", ПредставлениеСтатусПлательщика);
	
	ИменаЭлементовПредставления = Новый Массив;
	ИменаЭлементовПредставления.Добавить("КБК");
	ИменаЭлементовПредставления.Добавить("КодТерритории");
	ИменаЭлементовПредставления.Добавить("ОснованиеПлатежа");
	ИменаЭлементовПредставления.Добавить("НалоговыйПериод");
	ИменаЭлементовПредставления.Добавить("НомерДокумента");
	ИменаЭлементовПредставления.Добавить("ДатаДокумента");
	Если Не ДействуетПриказ126н(Период) Тогда
		ИменаЭлементовПредставления.Добавить("ТипПлатежа");
	КонецЕсли;
	ИменаЭлементовПредставления.Добавить("СтатусПлательщика");
	ИменаЭлементовПредставления.Добавить("ИдентификаторПлатежа");
	
	ЭлементыПредставления = Новый Массив;
	
	Для Каждого ИмяЭлемента Из ИменаЭлементовПредставления Цикл
		ЗначениеЭлемента = "";
		Если Не ОсобыеСлучаи.Свойство(ИмяЭлемента, ЗначениеЭлемента) Тогда
			ЗначениеЭлемента = РеквизитыПлатежаВБюджет[ИмяЭлемента];
		КонецЕсли;
		ЭлементыПредставления.Добавить(ЗначениеЭлемента);
	КонецЦикла;
	
	Возврат СтрСоединить(ЭлементыПредставления, "; ");
	
КонецФункции

