Процедура ДобавитьПроводкиПереквалификацияАвансов(ТаблицаПроводок, СуммыДебет, СуммыКредит, СтрокаВзаиморасчетов, НеоплаченныйАванс, ДокументРеализации)
	
	СчетаУчета = СчетаУчетаВспомогательныхРасчетов();
	
	// Первый проход - отражаем суммы одного вида в корреспонденции друг с другом.
	
	Для Каждого Суффикс Из СуффиксыСуммВспомогательныхРасчетов() Цикл
		
		КлючСумм = "Сумма" + Суффикс;
		
		СуммаПроводки = Мин(СуммыДебет[КлючСумм], СуммыКредит[КлючСумм]);
		
		Если СуммаПроводки = 0 Тогда
			Продолжить;
		КонецЕсли;
		
		СчетДт = СчетаУчета["Счет" + Суффикс];
		СчетКт = СчетаУчета["Счет" + Суффикс];
		
		ДобавитьПроводкуПереквалификацииАванса(
			ТаблицаПроводок,
			СуммаПроводки,
			СчетДт,
			СчетКт,
			СтрокаВзаиморасчетов,
			НеоплаченныйАванс,
			ДокументРеализации);
		
		СуммыДебет[КлючСумм]  = СуммыДебет[КлючСумм] - СуммаПроводки;
		СуммыКредит[КлючСумм] = СуммыКредит[КлючСумм] - СуммаПроводки;
		
	КонецЦикла;
	
	// Второй проход - сводим в корреспонденции оставшиеся ненулевые суммы без учета их вида.
	
	Для Каждого СуффиксДт Из СуффиксыСуммВспомогательныхРасчетов() Цикл
		
		КлючСуммДт = "Сумма" + СуффиксДт;
		
		Для Каждого СуффиксКт Из СуффиксыСуммВспомогательныхРасчетов() Цикл
			
			КлючСуммКт = "Сумма" + СуффиксКт;
			
			СуммаПроводки = Мин(СуммыДебет[КлючСуммДт], СуммыКредит[КлючСуммКт]);
			
			Если СуммаПроводки = 0 Тогда
				Продолжить;
			КонецЕсли;
			
			СчетДт = СчетаУчета["Счет" + СуффиксДт];
			СчетКт = СчетаУчета["Счет" + СуффиксКт];
			
			ДобавитьПроводкуПереквалификацииАванса(
				ТаблицаПроводок,
				СуммаПроводки,
				СчетДт,
				СчетКт,
				СтрокаВзаиморасчетов,
				НеоплаченныйАванс,
				ДокументРеализации);
			
			СуммыДебет[КлючСуммДт]  = СуммыДебет[КлючСуммДт] - СуммаПроводки;
			СуммыКредит[КлючСуммКт] = СуммыКредит[КлючСуммКт] - СуммаПроводки;
			
		КонецЦикла;
		
	КонецЦикла;
	
	// Третий проход - списываем оставшиеся со стороны Дт суммы без корреспонденции.
	
	Для Каждого Суффикс Из СуффиксыСуммВспомогательныхРасчетов() Цикл
		
		КлючСумм = "Сумма" + Суффикс;
		
		Если СуммыДебет[КлючСумм] = 0 Тогда
			Продолжить;
		КонецЕсли;
		
		ДобавитьПроводкуПереквалификацииАванса(
			ТаблицаПроводок,
			СуммыДебет[КлючСумм],
			СчетаУчета["Счет" + Суффикс],
			Неопределено,
			СтрокаВзаиморасчетов,
			НеоплаченныйАванс,
			ДокументРеализации);
		
		СуммыДебет[КлючСумм] = 0;
		
	КонецЦикла;
	
	// Четвертый проход - списываем оставшиеся со стороны Кт суммы без корреспонденции.
	
	Для Каждого Суффикс Из СуффиксыСуммВспомогательныхРасчетов() Цикл
		
		КлючСумм = "Сумма" + Суффикс;
		
		Если СуммыКредит[КлючСумм] = 0 Тогда
			Продолжить;
		КонецЕсли;
		
		ДобавитьПроводкуПереквалификацииАванса(
			ТаблицаПроводок,
			СуммыКредит[КлючСумм],
			Неопределено,
			СчетаУчета["Счет" + Суффикс],
			СтрокаВзаиморасчетов,
			НеоплаченныйАванс,
			ДокументРеализации);
		
		СуммыКредит[КлючСумм] = 0;
		
	КонецЦикла;
	
КонецПроцедуры

Процедура ДобавитьПроводкуПереквалификацииАванса(ТаблицаПроводок, Сумма, СчетДт, СчетКт, СтрокаВзаиморасчетов, НеоплаченныйАванс, ДокументРеализации)
	
	Если Сумма = 0 Тогда
		Возврат;
	КонецЕсли;
	
	Если Не ЗначениеЗаполнено(СчетДт) И Не ЗначениеЗаполнено(СчетКт) Тогда
		Возврат;
	КонецЕсли;
	
	Проводка = ТаблицаПроводок.Добавить();
	
	Проводка.Сумма = Сумма;
	Проводка.Содержание = НСтр("ru = 'Расчеты с эквайером по зачтенному авансу с особым порядком налогообложения'",
		ОбщегоНазначения.КодОсновногоЯзыка());
	
	Если ЗначениеЗаполнено(СчетДт) Тогда
		Проводка.СчетДт = СчетДт;
		Проводка.ПодразделениеДт = СтрокаВзаиморасчетов.ПодразделениеРасчетов;
		Проводка.КонтрагентДт = НеоплаченныйАванс.Контрагент; // Эквайер
		Проводка.ДоговорКонтрагентаДт = НеоплаченныйАванс.ДоговорКонтрагента;
		Проводка.ДокументРасчетовДт = ДокументРеализации;
	КонецЕсли;
	
	Если ЗначениеЗаполнено(СчетКт) Тогда
		Проводка.СчетКт = СчетКт;
		Проводка.ПодразделениеКт = СтрокаВзаиморасчетов.Подразделение;
		Проводка.КонтрагентКт = НеоплаченныйАванс.Контрагент; // Эквайер
		Проводка.ДоговорКонтрагентаКт = НеоплаченныйАванс.ДоговорКонтрагента;
		Проводка.ДокументРасчетовКт = СтрокаВзаиморасчетов.ДокументРасчетов;
	КонецЕсли;
	
КонецПроцедуры

Процедура ДобавитьДвиженияПрочиеРасчетыПоЭквайрингуЗачетАванса(ТаблицаПрочихРасчетов, Сумма, Реквизиты, НеоплаченныйАванс, ДокументРеализации)
	
	Если Сумма = 0 Тогда
		Возврат;
	КонецЕсли;
	
	// Остаток прочих расчетов по зачтенному авансу с посредником необходимо перенести на документ реализации.
	
	ПрочиеРасчетыРасход = ТаблицаПрочихРасчетов.Добавить();
	
	ЗаполнитьЗначенияСвойств(ПрочиеРасчетыРасход, Реквизиты);
	ЗаполнитьЗначенияСвойств(ПрочиеРасчетыРасход, НеоплаченныйАванс);
	ПрочиеРасчетыРасход.ВидДвижения = ВидДвиженияНакопления.Расход;
	ПрочиеРасчетыРасход.Сумма = Сумма;
	
	ПрочиеРасчетыПриход = ТаблицаПрочихРасчетов.Добавить();
	ЗаполнитьЗначенияСвойств(ПрочиеРасчетыПриход, ПрочиеРасчетыРасход);
	ПрочиеРасчетыПриход.ВидДвижения = ВидДвиженияНакопления.Приход;
	ПрочиеРасчетыПриход.РасчетныйДокумент = ДокументРеализации;
	
КонецПроцедуры

Процедура ДобавитьПроводкуПереносРасчетовПоЭквайрингуЗачетАванса(ТаблицаПроводок, Сумма, НеоплаченныйАванс, СтрокаВзаиморасчетов, ДокументРеализации)
	
	Если Сумма = 0 Тогда
		Возврат;
	КонецЕсли;
	
	// При учете по подразделением необходимо перенести расчеты по зачтенному авансу в пути на подразделение реализации.
	
	СвойстваСчетаЭквайринга = БухгалтерскийУчетВызовСервераПовтИсп.ПолучитьСвойстваСчета(НеоплаченныйАванс.СчетУчета);
	Если Не СвойстваСчетаЭквайринга.УчетПоПодразделениям
		Или СтрокаВзаиморасчетов.ПодразделениеРасчетов = СтрокаВзаиморасчетов.Подразделение Тогда
		// Не требуется менять подразделение.
		Возврат;
	КонецЕсли;
	
	Проводка = ТаблицаПроводок.Добавить();
	
	Проводка.Сумма = Сумма;
	Проводка.Содержание = НСтр("ru = 'Расчеты с эквайером по зачтенному авансу'", ОбщегоНазначения.КодОсновногоЯзыка());
	
	Проводка.СчетДт = НеоплаченныйАванс.СчетУчета;
	Проводка.ПодразделениеДт = СтрокаВзаиморасчетов.ПодразделениеРасчетов; // Подразделение реализации
	Проводка.КонтрагентДт = НеоплаченныйАванс.Контрагент; // Эквайер
	Проводка.ДоговорКонтрагентаДт = НеоплаченныйАванс.ДоговорКонтрагента;
	Проводка.ДокументРасчетовДт = ДокументРеализации;
	
	Проводка.СчетКт = НеоплаченныйАванс.СчетУчета;
	Проводка.ПодразделениеКт = СтрокаВзаиморасчетов.Подразделение; // Подразделение аванса
	Проводка.КонтрагентКт = НеоплаченныйАванс.Контрагент; // Эквайер
	Проводка.ДоговорКонтрагентаКт = НеоплаченныйАванс.ДоговорКонтрагента;
	Проводка.ДокументРасчетовКт = СтрокаВзаиморасчетов.ДокументРасчетов;
	
КонецПроцедуры

