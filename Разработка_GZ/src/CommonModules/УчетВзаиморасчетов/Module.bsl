Функция РассчитатьОстаткиАвансыПодотчетногоЛица(ТаблицаЗачетАвансов, Реквизиты, ИтогоСуммаВзаиморасчетов, ИтогоСуммаБУ)
	
	ТаблицаОстаткиАвансыПодотчетногоЛица = ПустаяТаблицаОстаткиАвансыПодотчетногоЛица();
	
	Если ИтогоСуммаВзаиморасчетов = 0 Тогда
		Возврат ТаблицаОстаткиАвансыПодотчетногоЛица;
	КонецЕсли;
	
	АвансЗакрываетсяПолностью = ИтогоСуммаВзаиморасчетов = ТаблицаЗачетАвансов.Итог("СуммаВзаиморасчетов");
	
	Для Каждого СтрокаАвансов Из ТаблицаЗачетАвансов Цикл
		НоваяСтрока = ТаблицаОстаткиАвансыПодотчетногоЛица.Добавить();
		ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаАвансов);
		
		КурсыВалют = РаботаСКурсамиВалют.ПолучитьКурсВалюты(СтрокаАвансов.Валюта, СтрокаАвансов.ДатаДокументаРасчетов);
		Если Не ЗначениеЗаполнено(КурсыВалют.Курс) Тогда
			КурсыВалют.Курс = 1;
		КонецЕсли;
		Если Не ЗначениеЗаполнено(КурсыВалют.Кратность) Тогда
			КурсыВалют.Кратность = 1;
		КонецЕсли;
		
		НоваяСтрока.СуммаБУ = Окр(НоваяСтрока.СуммаВзаиморасчетов * КурсыВалют.Курс / КурсыВалют.Кратность, 2, 1);
		НоваяСтрока.СуммаНУ = НоваяСтрока.СуммаБУ;
		
		Если АвансЗакрываетсяПолностью Тогда
			ИтогоСуммаВзаиморасчетов = ИтогоСуммаВзаиморасчетов - НоваяСтрока.СуммаВзаиморасчетов;
			ИтогоСуммаБУ = ИтогоСуммаБУ - НоваяСтрока.СуммаБУ;
			Если ИтогоСуммаВзаиморасчетов = 0 Тогда
				НоваяСтрока.СуммаБУ = НоваяСтрока.СуммаБУ + ИтогоСуммаБУ;
				НоваяСтрока.СуммаНУ = НоваяСтрока.СуммаБУ;
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;
	
	ТаблицаОстаткиАвансыПодотчетногоЛица.Свернуть("Счет, Валюта, ФизЛицо, Подразделение",
		"СуммаВзаиморасчетов, СуммаБУ, СуммаНУ");
	
	Возврат ТаблицаОстаткиАвансыПодотчетногоЛица;
	
КонецФункции

Функция ПолучитьОстаткиАвансыПодотчетногоЛица(ТаблицаДокумента, Реквизиты, Отказ)
	
	Если ТаблицаДокумента.Количество() = 0 Тогда
		Возврат ПустаяТаблицаОстаткиАвансыПодотчетногоЛица();
	КонецЕсли;
	
	ТаблицаПодотчетныхЛиц = ТаблицаДокумента.Скопировать(, "СчетАвансов, ФизЛицо");
	ТаблицаПодотчетныхЛиц.Свернуть("СчетАвансов, ФизЛицо");
	
	Если ТаблицаПодотчетныхЛиц.Количество() = 0 Тогда
		Возврат ПустаяТаблицаОстаткиАвансыПодотчетногоЛица();
	КонецЕсли;
	
	ТаблицаПодотчетныхЛиц.Индексы.Добавить("СчетАвансов");
	ТаблицаСчетов = ТаблицаПодотчетныхЛиц.Скопировать(, "СчетАвансов");
	ТаблицаСчетов.Свернуть("СчетАвансов");
	
	// Блокируем регистр Хозрасчетный для получения остатков
	Блокировка = Новый БлокировкаДанных;
	
	Для Каждого СтрокаСчета Из ТаблицаСчетов Цикл
		ДанныеСчета = БухгалтерскийУчетВызовСервераПовтИсп.ПолучитьСвойстваСчета(СтрокаСчета.СчетАвансов);
		
		ЭлементБлокировки = Блокировка.Добавить("РегистрБухгалтерии.Хозрасчетный");
		ЭлементБлокировки.УстановитьЗначение("Период",      Новый Диапазон(, Реквизиты.Период));
		ЭлементБлокировки.УстановитьЗначение("Организация", Реквизиты.Организация);
		ЭлементБлокировки.УстановитьЗначение("Счет",        СтрокаСчета.СчетАвансов);
		
		ОтборПоСчету = Новый Структура("СчетАвансов", СтрокаСчета.СчетАвансов);
		ТаблицаФизлицПоСчету = ТаблицаПодотчетныхЛиц.Скопировать(ОтборПоСчету, "ФизЛицо");
		ЭлементБлокировки.ИсточникДанных = ТаблицаФизлицПоСчету;
		
		Для НомерСубконто = 1 По ДанныеСчета.КоличествоСубконто Цикл
			Если ДанныеСчета["ВидСубконто" + НомерСубконто] = ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.РаботникиОрганизаций Тогда
				ЭлементБлокировки.ИспользоватьИзИсточникаДанных(
					ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.РаботникиОрганизаций, "ФизЛицо");
			КонецЕсли;
		КонецЦикла;
	КонецЦикла;
	
	Блокировка.Заблокировать();
	
	// Счета для получения остатков
	
	СчетаАвансов = ТаблицаСчетов.ВыгрузитьКолонку("СчетАвансов");
	
	// Получаем остатки
	
	Запрос = Новый Запрос;
	
	Запрос.УстановитьПараметр("Организация",           Реквизиты.Организация);
	Запрос.УстановитьПараметр("Валюта",                Реквизиты.ВалютаДокумента);
	Запрос.УстановитьПараметр("МоментВремениОстатков", Новый МоментВремени(Реквизиты.Период, Реквизиты.Регистратор));
	Запрос.УстановитьПараметр("ВидыСубконтоРасчетов",  ОбщегоНазначенияКлиентСервер.ЗначениеВМассиве(
		ПланыВидовХарактеристик.ВидыСубконтоХозрасчетные.РаботникиОрганизаций));
	Запрос.УстановитьПараметр("СчетаАвансов",          СчетаАвансов);
	Запрос.УстановитьПараметр("ПустоеПодразделение",   БухгалтерскийУчетПереопределяемый.ПустоеПодразделение());
	Запрос.УстановитьПараметр("ВалютаРеглУчета",
		ОбщегоНазначенияБПВызовСервераПовтИсп.ПолучитьВалютуРегламентированногоУчета());
	Запрос.УстановитьПараметр("МассивФизЛиц",
		ОбщегоНазначения.ВыгрузитьКолонку(ТаблицаДокумента, "ФизЛицо", Истина));
	
	Запрос.Текст = ТекстЗапросаОстаткиАвансовПодотчетногоЛица();
	
	ОстаткиАвансов = Запрос.Выполнить().Выгрузить();
	
	// Индекc используется функцией ПодготовитьТаблицуВалютныеАвансыПодотчетногоЛица
	ОстаткиАвансов.Индексы.Добавить("Счет, ФизЛицо");
	
	Возврат ОстаткиАвансов;
	
КонецФункции

Функция ТекстЗапросаОстаткиАвансовПодотчетногоЛица()
	
	ТекстЗапроса =
	"ВЫБРАТЬ
	|	Остатки.Счет КАК Счет,
	|	Остатки.Валюта КАК Валюта,
	|	Остатки.Субконто1 КАК ФизЛицо,
	|	ЕСТЬNULL(Остатки.Подразделение, &ПустоеПодразделение) КАК Подразделение,
	|	ВЫБОР
	|		КОГДА Остатки.Счет.Валютный
	|			ТОГДА Остатки.ВалютнаяСуммаОстаток
	|		ИНАЧЕ Остатки.СуммаОстаток
	|	КОНЕЦ КАК СуммаВзаиморасчетов,
	|	Остатки.СуммаОстаток КАК СуммаБУ,
	|	Остатки.СуммаНУОстаток КАК СуммаНУ
	|ИЗ
	|	РегистрБухгалтерии.Хозрасчетный.Остатки(
	|			&МоментВремениОстатков,
	|			Счет В (&СчетаАвансов),
	|			&ВидыСубконтоРасчетов,
	|			Организация = &Организация
	|				И ЕСТЬNULL(Валюта, &ВалютаРеглУчета) = &Валюта
	|				И Субконто1 В (&МассивФизЛиц)) КАК Остатки
	|ГДЕ
	|	ВЫБОР
	|			КОГДА Остатки.Счет.Валютный
	|				ТОГДА Остатки.ВалютнаяСуммаОстаток
	|			ИНАЧЕ Остатки.СуммаОстаток
	|		КОНЕЦ > 0";
	
	Возврат ТекстЗапроса;
	
КонецФункции

Функция ПустаяТаблицаЗачетАвансыПодотчетногоЛица()
	
	ПустаяТаблица = Новый ТаблицаЗначений();
	
	ПустаяТаблица.Колонки.Добавить("ФизЛицо",               Новый ОписаниеТипов("СправочникСсылка.ФизическиеЛица"));
	ПустаяТаблица.Колонки.Добавить("ВалютаВзаиморасчетов",  Новый ОписаниеТипов("СправочникСсылка.Валюты"));
	ПустаяТаблица.Колонки.Добавить("Подразделение",         БухгалтерскийУчетКлиентСерверПереопределяемый.ОписаниеТиповПодразделения());
	ПустаяТаблица.Колонки.Добавить("ПодразделениеРасчетов", БухгалтерскийУчетКлиентСерверПереопределяемый.ОписаниеТиповПодразделения());
	ПустаяТаблица.Колонки.Добавить("СчетАвансов",           Новый ОписаниеТипов("ПланСчетовСсылка.Хозрасчетный"));
	ПустаяТаблица.Колонки.Добавить("ОстатокВзаиморасчетов", БухгалтерскийУчетКлиентСервер.ТипСумма());
	ПустаяТаблица.Колонки.Добавить("СуммаВзаиморасчетов",   БухгалтерскийУчетКлиентСервер.ТипСумма());
	ПустаяТаблица.Колонки.Добавить("СуммаРуб",              БухгалтерскийУчетКлиентСервер.ТипСумма());
	ПустаяТаблица.Колонки.Добавить("СуммаРубПоКурсуАванса", БухгалтерскийУчетКлиентСервер.ТипСумма());
	ПустаяТаблица.Колонки.Добавить("РасчетыВВалюте",        Новый ОписаниеТипов("Булево"));
	
	Возврат ПустаяТаблица;
	
КонецФункции

// Заполняет таблицу авансов подоотчентного лица.
//
// Параметры:
//	ТаблицаДокумента - ТаблицаЗначений - см. результат ПодготовитьПараметрыТаблицыАвансыПодотчетногоЛица().
//	Реквизиты - СтрокаТаблицыЗначений - см. таблицу Реквизиты в ПодготовитьПараметрыТаблицыАвансыПодотчетногоЛица().
//	ТаблицаАвансыПодотчетногоЛица - ТаблицаЗначений - см. результат ПустаяТаблицаЗачетАвансыПодотчетногоЛица().
//	ОстаткиАвансов - ТаблицаЗначений - см. результат ПустаяТаблицаОстаткиАвансыПодотчетногоЛица().
//	Отказ - Булево - Истина, если в ходе выполнения процедуры обнаружена ошибка и требуется откатить транзакцию записи движений.
//
Процедура ЗаполнитьТаблицуАвансыПодотчетногоЛица(ТаблицаДокумента, Реквизиты, ТаблицаАвансыПодотчетногоЛица, ОстаткиАвансов)
	
	Для Каждого СтрокаДокумента Из ТаблицаДокумента Цикл
		НераспределенныйОстаток = СтрокаДокумента.СуммаВзаиморасчетов;
		ОстаткиАвансовПоФизЛицу = ОстаткиАвансов.НайтиСтроки(
			Новый Структура("Счет, Физлицо, Валюта, Подразделение",
				СтрокаДокумента.СчетАвансов,
				СтрокаДокумента.ФизЛицо,
				СтрокаДокумента.ВалютаВзаиморасчетов,
				СтрокаДокумента.Подразделение));
		
		ДобавитьСтрокиЗачтенныхАвансовПодотчетногоЛица(
			ТаблицаАвансыПодотчетногоЛица,
			НераспределенныйОстаток,
			ОстаткиАвансовПоФизЛицу,
			СтрокаДокумента,
			Реквизиты);
		
		ДобавитьСтрокуЗадолженностиПодотчетногоЛица(
			ТаблицаАвансыПодотчетногоЛица,
			НераспределенныйОстаток,
			СтрокаДокумента,
			Реквизиты);
	КонецЦикла;
	
КонецПроцедуры

Процедура ДобавитьСтрокиЗачтенныхАвансовПодотчетногоЛица(ТаблицаАвансыПодотчетногоЛица,
														 НераспределеннаяСумма,
														 ОстаткиАвансовПоФизЛицу,
														 СтрокаДокумента,
														 Реквизиты)
	
	Для Каждого СтрокаОстатка Из ОстаткиАвансовПоФизЛицу Цикл
		Если НераспределеннаяСумма <= 0 Тогда
			Прервать;
		КонецЕсли;
		
		ЗачитываемыйАванс = Мин(НераспределеннаяСумма, СтрокаОстатка.СуммаВзаиморасчетов);
		
		Если ЗачитываемыйАванс <= 0 Тогда
			Продолжить;
		КонецЕсли;
		
		СтрокаАвансов = ТаблицаАвансыПодотчетногоЛица.Добавить();
		
		ЗаполнитьЗначенияСвойств(СтрокаАвансов, СтрокаДокумента,
			"СчетАвансов, Физлицо, РасчетыВВалюте, ВалютаВзаиморасчетов");
		СтрокаАвансов.ПодразделениеРасчетов = СтрокаДокумента.Подразделение;
		
		ЗаполнитьЗначенияСвойств(СтрокаАвансов, СтрокаОстатка, "Подразделение");
		
		СтрокаАвансов.ОстатокВзаиморасчетов = СтрокаОстатка.СуммаВзаиморасчетов;
		СтрокаАвансов.СуммаВзаиморасчетов   = ЗачитываемыйАванс;
		
		КоэффициентКурсаАванса = ?(НЕ СтрокаДокумента.РасчетыВВалюте, 1,
			?(СтрокаОстатка.СуммаВзаиморасчетов = 0, 0, СтрокаОстатка.СуммаБУ / СтрокаОстатка.СуммаВзаиморасчетов));
		
		КоэффициентРуб = ?(НЕ СтрокаДокумента.РасчетыВВалюте, 1,
			?(СтрокаОстатка.СуммаВзаиморасчетов = 0, 0, СтрокаДокумента.СуммаРуб / СтрокаДокумента.СуммаВзаиморасчетов));
		
		КоэффициентЗачтенногоАванса = СтрокаАвансов.СуммаВзаиморасчетов / СтрокаОстатка.СуммаВзаиморасчетов;
		
		СтрокаАвансов.СуммаРубПоКурсуАванса = Окр(ЗачитываемыйАванс * КоэффициентКурсаАванса, 2);
		СтрокаАвансов.СуммаРуб              = Окр(ЗачитываемыйАванс * КоэффициентРуб, 2);
		
		НераспределеннаяСумма = НераспределеннаяСумма - ЗачитываемыйАванс;
		
		СтрокаОстатка.СуммаВзаиморасчетов = СтрокаОстатка.СуммаВзаиморасчетов - СтрокаАвансов.СуммаВзаиморасчетов;
		СтрокаОстатка.СуммаБУ             = СтрокаОстатка.СуммаБУ - СтрокаАвансов.СуммаРубПоКурсуАванса;
	КонецЦикла;
	
КонецПроцедуры

Процедура ДобавитьСтрокуЗадолженностиПодотчетногоЛица(ТаблицаАвансыПодотчетногоЛица,
													  НераспределеннаяСумма,
													  СтрокаДокумента,
													  Реквизиты)
	
	Если НераспределеннаяСумма <= 0 Тогда
		Возврат;
	КонецЕсли;
	
	СтрокаАвансов = ТаблицаАвансыПодотчетногоЛица.Добавить();
	
	ЗаполнитьЗначенияСвойств(СтрокаАвансов, СтрокаДокумента,
		"СчетАвансов, ФизЛицо, РасчетыВВалюте, ВалютаВзаиморасчетов, Подразделение");
	
	СтрокаАвансов.ПодразделениеРасчетов = СтрокаДокумента.Подразделение;
	СтрокаАвансов.СуммаВзаиморасчетов = НераспределеннаяСумма;
	
	КурсыВалют = РаботаСКурсамиВалют.ПолучитьКурсВалюты(Реквизиты.ВалютаДокумента, Реквизиты.Период);
	
	КоэффициентРуб = ?(Не СтрокаДокумента.РасчетыВВалюте, 1, КурсыВалют.Курс / КурсыВалют.Кратность);
	СтрокаАвансов.СуммаРубПоКурсуАванса = Окр(НераспределеннаяСумма * КоэффициентРуб, 2);
	
	КоэффициентРуб = ?(Не СтрокаДокумента.РасчетыВВалюте, 1,
		?(СтрокаДокумента.СуммаВзаиморасчетов = 0, 0, СтрокаДокумента.СуммаРуб / СтрокаДокумента.СуммаВзаиморасчетов));
	
	СтрокаАвансов.СуммаРуб = Окр(НераспределеннаяСумма * КоэффициентРуб, 2);
	
КонецПроцедуры

