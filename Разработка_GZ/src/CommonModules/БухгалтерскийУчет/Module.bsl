		КонецЕсли;
		
		СписокСубсчетов.Добавить(Субсчет.СчетПараметра);
		
	КонецЦикла;
	
	// дополняем списки счетов в параметрах их субсчетами
	Для Каждого ПараметрЗапроса Из СписокИменРазворачиваемыхПараметров Цикл
		
