				ОбластьМакета.Рисунки.ФаксимилеПечатьПредприниматель.Линия    = ЛинияРамки;
			КонецЕсли;
			
			Если ОбластьМакета.Области.Найти("ФаксимилеПредприниматель") <> Неопределено Тогда
				ОбластьМакета.Рисунки.ФаксимилеПредприниматель.Картинка =
					Новый Картинка(ДвоичныеДанныеПодписьРуководителя);
				ОбластьМакета.Рисунки.ФаксимилеПредприниматель.ЦветФона = ЦветФонаАвто;
				ОбластьМакета.Рисунки.ФаксимилеПредприниматель.Линия    = ЛинияРамки;
			КонецЕсли;
			
		КонецЕсли;
			
		УправлениеПечатьюБП.ОчиститьОбластьФаксимиле(ОбластьМакета, "ФаксимильнаяПечать");
		УправлениеПечатьюБП.ОчиститьОбластьФаксимиле(ОбластьМакета, "ФаксимильнаяПечатьПредприниматель");
		
	ИначеЕсли ЗначениеЗаполнено(ДвоичныеДанныеФаксимиле) Тогда
		
		Если ЭтоЮридическоеЛицо Тогда
			Если ОбластьМакета.Области.Найти("ФаксимильнаяПечать") <> Неопределено Тогда
				ОбластьМакета.Рисунки.ФаксимильнаяПечать.Картинка =
					Новый Картинка(ДвоичныеДанныеФаксимиле);
				ОбластьМакета.Рисунки.ФаксимильнаяПечать.ЦветФона = ЦветФонаБелый;
				ОбластьМакета.Рисунки.ФаксимильнаяПечать.Линия    = ЛинияРамки;
			КонецЕсли;
		Иначе
			Если ОбластьМакета.Области.Найти("ФаксимильнаяПечатьПредприниматель") <> Неопределено Тогда
				ОбластьМакета.Рисунки.ФаксимильнаяПечатьПредприниматель.Картинка =
					Новый Картинка(ДвоичныеДанныеФаксимиле);
				ОбластьМакета.Рисунки.ФаксимильнаяПечатьПредприниматель.ЦветФона = ЦветФонаБелый;
				ОбластьМакета.Рисунки.ФаксимильнаяПечатьПредприниматель.Линия    = ЛинияРамки;
			КонецЕсли;
		КонецЕсли;
			
		УправлениеПечатьюБП.ОчиститьОбластьФаксимиле(ОбластьМакета, "ФаксимилеПечать");
		УправлениеПечатьюБП.ОчиститьОбластьФаксимиле(ОбластьМакета, "ФаксимилеРуководитель");
		УправлениеПечатьюБП.ОчиститьОбластьФаксимиле(ОбластьМакета, "ФаксимилеГлавныйБухгалтер");
		УправлениеПечатьюБП.ОчиститьОбластьФаксимиле(ОбластьМакета, "ФаксимилеПечатьПредприниматель");
		УправлениеПечатьюБП.ОчиститьОбластьФаксимиле(ОбластьМакета, "ФаксимилеПредприниматель");
		
	Иначе
		
		УправлениеПечатьюБП.ОчиститьОбластьФаксимиле(ОбластьМакета, "ФаксимильнаяПечать");
		УправлениеПечатьюБП.ОчиститьОбластьФаксимиле(ОбластьМакета, "ФаксимильнаяПечатьПредприниматель");
		УправлениеПечатьюБП.ОчиститьОбластьФаксимиле(ОбластьМакета, "ФаксимилеПечать");
		УправлениеПечатьюБП.ОчиститьОбластьФаксимиле(ОбластьМакета, "ФаксимилеРуководитель");
		УправлениеПечатьюБП.ОчиститьОбластьФаксимиле(ОбластьМакета, "ФаксимилеГлавныйБухгалтер");
		УправлениеПечатьюБП.ОчиститьОбластьФаксимиле(ОбластьМакета, "ФаксимилеПечатьПредприниматель");
		УправлениеПечатьюБП.ОчиститьОбластьФаксимиле(ОбластьМакета, "ФаксимилеПредприниматель");
		
	КонецЕсли;
	
	ТабличныйДокумент.Вывести(ОбластьМакета);
	
	ТабличныйДокумент.АвтоМасштаб = Истина;
	Возврат ТабличныйДокумент;
	
КонецФункции

// Формирует номер счета на оплату покупателю с указанием номера государственного контракта.
//
// Параметры:
// НомерГосударственногоКонтракта - Строка - номер государственного контракта
// НомерДокумента - Строка - номер счета на оплату покупателю
//
// Возвращаемое значение:
// Строка - Номер счета на оплату покупателю с указанием номера государственного контракта.
//
Функция НомерСчетаНаОплату(НомерГосударственногоКонтракта, НомерДокумента) Экспорт
	
	Разделитель = ?(НЕ ПустаяСтрока(НомерГосударственногоКонтракта), "/", "");
	Возврат НомерГосударственногоКонтракта + Разделитель + НомерДокумента;
	
КонецФункции

Функция QRКодРеквизитыПлатежа(ДанныеДокумента, ДанныеПечатиЗаголовокСчета)
	
	РеквизитыПлатежа = ОбщегоНазначенияБП.НовыйРеквизитыПлатежаУФЭБС();
	
	ЗаполнитьЗначенияСвойств(РеквизитыПлатежа, ДанныеПечатиЗаголовокСчета);
	
	РеквизитыПлатежа.ТекстПолучателя             = ДанныеПечатиЗаголовокСчета.ПредставлениеПолучателя;
	РеквизитыПлатежа.НомерСчетаПолучателя        = ДанныеПечатиЗаголовокСчета.СчетПолучателя;
	РеквизитыПлатежа.НаименованиеБанкаПолучателя = ДанныеПечатиЗаголовокСчета.БанкПолучателяПредставление;
	РеквизитыПлатежа.БИКБанкаПолучателя          = ДанныеПечатиЗаголовокСчета.БИКБанкаПолучателя;
	РеквизитыПлатежа.СчетБанкаПолучателя         = ДанныеПечатиЗаголовокСчета.СчетБанкаПолучателя;
	
	РеквизитыПлатежа.ИННПолучателя               = ДанныеПечатиЗаголовокСчета.ИННПолучателя;
	РеквизитыПлатежа.КПППолучателя               = ДанныеПечатиЗаголовокСчета.КПППолучателя;
	
	СкидкиПоДокументу = (ДанныеДокумента.ТаблицаДокумента.Итог("СуммаСкидки") + ДанныеДокумента.СуммаСкидки);
	
	СуммаНДС = ДанныеДокумента.ТаблицаДокумента.Итог("СуммаНДС");
	
	СуммаКОплате = ДанныеДокумента.ТаблицаДокумента.Итог("Сумма") 
		+ ?(ДанныеДокумента.СуммаВключаетНДС, 0, СуммаНДС) - СкидкиПоДокументу;
	
	РеквизитыПлатежа.СуммаЧислом = СуммаКОплате;
	
	Если СуммаНДС > 0 Тогда
		ТекстПроНДС = НСтр("ru = 'В том числе НДС'");
	Иначе
		ТекстПроНДС = НСтр("ru = 'Без налога (НДС)'");
	КонецЕсли;
	
	РеквизитыПлатежа.НазначениеПлатежа = СтрШаблон(НСтр("ru = 'Оплата по счету № %1 от %2. Сумма %3. %4.'"), 
		ДанныеДокумента.НомерДокумента, 
		Формат(ДанныеДокумента.ДатаДокумента, "ДФ=dd.MM.yyyy"), 
		Формат(СуммаКОплате, "ЧЦ=15; ЧДЦ=2; ЧРД=-; ЧН=0-00; ЧГ="), 
		ТекстПроНДС);
	

	// QR-код
	QRСтрока = УправлениеПечатьюРФ.ФорматнаяСтрокаУФЭБС(РеквизитыПлатежа);
	Если ПустаяСтрока(QRСтрока) Тогда
		Возврат Неопределено; // Возникли ошибки
	КонецЕсли;
	
	ДанныеQRКода = ГенерацияШтрихкодаВызовСервера.ДанныеQRКода(QRСтрока, 0, 190);
	Если НЕ ТипЗнч(ДанныеQRКода) = Тип("ДвоичныеДанные") Тогда
		Шаблон = Нстр("ru = 'Не удалось сформировать QR-код для документа %1.
			|Технические подробности см. в журнале регистрации.'");
		ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(Шаблон, ДанныеДокумента.Документ);
		ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения);
		Возврат Неопределено;
	КонецЕсли;
	
	Возврат ДанныеQRКода;
КонецФункции 

#КонецОбласти

#Область ПриложениеКДоговору

// Функция печати приложения к договору на основе счета на оплату
Функция ПечатьПриложенияКДоговору(СведенияСчетаНаОплату, ОбъектыПечати, ПараметрыПечати) Экспорт

	УстановитьПривилегированныйРежим(Истина);
	
	ТабличныйДокумент = Новый ТабличныйДокумент;
	ТабличныйДокумент.АвтоМасштаб			= Истина;
	ТабличныйДокумент.ОриентацияСтраницы	= ОриентацияСтраницы.Портрет;
	ТабличныйДокумент.КлючПараметровПечати	= "ПАРАМЕТРЫ_ПЕЧАТИ_ЗаказПокупателя_ПриложениеКДоговору";
	
	ДополнительнаяКолонкаПечатныхФормДокументов = Константы.ДополнительнаяКолонкаПечатныхФормДокументов.Получить();
	Если НЕ ЗначениеЗаполнено(ДополнительнаяКолонкаПечатныхФормДокументов) Тогда
		ДополнительнаяКолонкаПечатныхФормДокументов = Перечисления.ДополнительнаяКолонкаПечатныхФормДокументов.НеВыводить;
	КонецЕсли;
	ВыводитьКоды = ДополнительнаяКолонкаПечатныхФормДокументов <> Перечисления.ДополнительнаяКолонкаПечатныхФормДокументов.НеВыводить;
	
	ПервыйДокумент = Истина;
	
	Для Каждого СведенияОДокументе Из СведенияСчетаНаОплату Цикл
		
		Макет = УправлениеПечатью.МакетПечатнойФормы("Документ.СчетНаОплатуПокупателю.ПФ_MXL_ПриложениеКДоговору");

		Если НЕ ПервыйДокумент Тогда
			ТабличныйДокумент.ВывестиГоризонтальныйРазделительСтраниц();
		КонецЕсли;
		
		ПервыйДокумент = Ложь;
		
		// Запомним номер строки, с которой начали выводить текущий документ.
		НомерСтрокиНачало = ТабличныйДокумент.ВысотаТаблицы + 1;
		
		// Выводим шапку счета
		ВывестиЗаголовокПредупреждение(СведенияОДокументе.Получатель, ТабличныйДокумент, Макет);

		ПараметрыОбласти = Новый Структура();
		
		СведенияОПоставщике = БухгалтерскийУчетПереопределяемый.СведенияОЮрФизЛице(СведенияОДокументе.Поставщик, СведенияОДокументе.ДатаДляПолученияСведений);
		ПараметрыОбласти.Вставить("ПредставлениеПоставщика", СведенияОПоставщике.НаименованиеДляПечатныхФорм);
		
		СведенияОПокупателе = БухгалтерскийУчетПереопределяемый.СведенияОЮрФизЛице(СведенияОДокументе.Покупатель, СведенияОДокументе.ДатаДляПолученияСведений);
		ПараметрыОбласти.Вставить("ПредставлениеПокупателя", СведенияОПокупателе.НаименованиеДляПечатныхФорм);


		ОбластьМакета = Макет.ПолучитьОбласть("Заголовок");
		
		ПараметрыОбласти.Вставить("НомерДоговора", "________");
		ПараметрыОбласти.Вставить("ДатаДоговора", """____"" ________________ г.");
		
		Если ЗначениеЗаполнено(СведенияОДокументе.НомерДоговора) Тогда
			
			ПараметрыОбласти.Вставить("НомерДоговора", СведенияОДокументе.НомерДоговора);
			
		КонецЕсли;
		
		Если ЗначениеЗаполнено(СведенияОДокументе.ДатаДоговора) Тогда
			
			ПараметрыОбласти.Вставить("ДатаДоговора", Формат(СведенияОДокументе.ДатаДоговора, "ДЛФ=DD"));
			
		КонецЕсли;
		
		ЗаполнитьЗначенияСвойств(ОбластьМакета.Параметры, ПараметрыОбласти);
		
		ТабличныйДокумент.Вывести(ОбластьМакета);

		ОбластьНомера = Макет.ПолучитьОбласть("ШапкаТаблицы|НомерСтроки");
		ОбластьКодов  = Макет.ПолучитьОбласть("ШапкаТаблицы|КолонкаКодов");
		ОбластьДанных = Макет.ПолучитьОбласть("ШапкаТаблицы|Данные");
		ОбластьСуммы  = Макет.ПолучитьОбласть("ШапкаТаблицы|Сумма");

		ТабличныйДокумент.Вывести(ОбластьНомера);
		Если ВыводитьКоды Тогда
			ДанныеПечатиКолонкиКодов = Новый Структура;
			Если ДополнительнаяКолонкаПечатныхФормДокументов = Перечисления.ДополнительнаяКолонкаПечатныхФормДокументов.Артикул Тогда
				ДанныеПечатиКолонкиКодов.Вставить("ИмяКолонкиКодов", "Артикул");
			ИначеЕсли ДополнительнаяКолонкаПечатныхФормДокументов = Перечисления.ДополнительнаяКолонкаПечатныхФормДокументов.Код Тогда
				ДанныеПечатиКолонкиКодов.Вставить("ИмяКолонкиКодов", "Код");
			КонецЕсли;
			ОбластьКодов.Параметры.Заполнить(ДанныеПечатиКолонкиКодов);
			ТабличныйДокумент.Присоединить(ОбластьКодов);
		КонецЕсли;
		ТабличныйДокумент.Присоединить(ОбластьДанных);
		ТабличныйДокумент.Присоединить(ОбластьСуммы);

		ОбластьКолонкаТовар = Макет.Область("Товар");
		Если Не ВыводитьКоды Тогда
			ОбластьКолонкаТовар.ШиринаКолонки = ОбластьКолонкаТовар.ШиринаКолонки + Макет.Область("КолонкаКодов").ШиринаКолонки;
		КонецЕсли;

		ОбластьНомера = Макет.ПолучитьОбласть("Строка|НомерСтроки");
		ОбластьКодов  = Макет.ПолучитьОбласть("Строка|КолонкаКодов");
		ОбластьДанных = Макет.ПолучитьОбласть("Строка|Данные");
		ОбластьСуммы  = Макет.ПолучитьОбласть("Строка|Сумма");

		Сумма    = 0;
		СуммаНДС = 0;
		ВсегоСкидок    = 0;
		ВсегоБезСкидок = 0;
		НомерСтроки    = 0;
		
		Если СведенияОДокументе.СуммаСкидки <> 0 Тогда
			// скидку по документу распределяем пропорционально по строкам
			СуммаНДСПоДокументу = СведенияОДокументе.ТаблицаДокумента.Итог("СуммаНДС");
			СуммаДокумента = СведенияОДокументе.ТаблицаДокумента.Итог("Сумма");
			
			СуммаНДССУчетомСкидки = СуммаНДСПоДокументу*?(СуммаДокумента = 0, 1, 1-СведенияОДокументе.СуммаСкидки/СуммаДокумента);
			
			ОбщегоНазначенияБПВызовСервера.РаспределитьСуммуПоКолонкеТаблицы(СведенияОДокументе.СуммаСкидки, СведенияОДокументе.ТаблицаДокумента, "СуммаСкидки", "Сумма");
			ОбщегоНазначенияБПВызовСервера.РаспределитьСуммуПоКолонкеТаблицы(СуммаНДССУчетомСкидки, СведенияОДокументе.ТаблицаДокумента, "СуммаНДС");
		КонецЕсли; 
		
		Для Каждого Строка Из СведенияОДокументе.ТаблицаДокумента Цикл
			
			НомерСтроки = НомерСтроки + 1;
			ОбластьНомера.Параметры.Заполнить(Новый Структура("НомерСтроки", НомерСтроки));
			ТабличныйДокумент.Вывести(ОбластьНомера);

			Если ВыводитьКоды Тогда
				ОбластьКодов.Параметры.Заполнить(Новый Структура("Артикул", Строка.НоменклатураАртикул));
				ТабличныйДокумент.Присоединить(ОбластьКодов);
			КонецЕсли;
			
			СуммаПоСтроке = Строка.Сумма - Строка.СуммаСкидки;
			Цена = Строка.Цена - ?(Строка.Количество = 0, 0, Строка.СуммаСкидки/Строка.Количество);
			
			ДанныеПечатиОбластьДанных = Новый Структура;
			ДанныеПечатиОбластьДанных.Вставить("Товар",				СокрЛП(Строка.НоменклатураНаименование));
			ДанныеПечатиОбластьДанных.Вставить("Количество",		Строка.Количество);
			ДанныеПечатиОбластьДанных.Вставить("ЕдиницаИзмерения",	Строка.ЕдиницаИзмеренияНаименование);
			ДанныеПечатиОбластьДанных.Вставить("Цена",				Цена);
			ОбластьДанных.Параметры.Заполнить(ДанныеПечатиОбластьДанных);
			
			ТабличныйДокумент.Присоединить(ОбластьДанных);
			
			ОбластьСуммы.Параметры.Заполнить(Новый Структура("Сумма", СуммаПоСтроке));
			
			ТабличныйДокумент.Присоединить(ОбластьСуммы);
			ВсегоСкидок    = ВсегоСкидок + Строка.СуммаСкидки;
			ВсегоБезСкидок = ВсегоБезСкидок + Строка.Сумма;
			Сумма          = Сумма    + Строка.Сумма - Строка.СуммаСкидки;
			СуммаНДС       = СуммаНДС + Строка.СуммаНДС;
			
		КонецЦикла;
		
		// Вывести Итого
		ОбластьНомера = Макет.ПолучитьОбласть("Итого|НомерСтроки");
		ОбластьКодов  = Макет.ПолучитьОбласть("Итого|КолонкаКодов");
		ОбластьДанных = Макет.ПолучитьОбласть("Итого|Данные");
		ОбластьСуммы  = Макет.ПолучитьОбласть("Итого|Сумма");

		ТабличныйДокумент.Вывести(ОбластьНомера);
		Если ВыводитьКоды Тогда
			ТабличныйДокумент.Присоединить(ОбластьКодов);
		КонецЕсли;
		ТабличныйДокумент.Присоединить(ОбластьДанных);
		ОбластьСуммы.Параметры.Заполнить(Новый Структура("Всего", ОбщегоНазначенияБПВызовСервера.ФорматСумм(Сумма)));
		ТабличныйДокумент.Присоединить(ОбластьСуммы);

		// Вывести ИтогоНДС
		ОбластьНомера = Макет.ПолучитьОбласть("ИтогоНДС|НомерСтроки");
		ОбластьКодов  = Макет.ПолучитьОбласть("ИтогоНДС|КолонкаКодов");
		ОбластьДанных = Макет.ПолучитьОбласть("ИтогоНДС|Данные");
		ОбластьСуммы  = Макет.ПолучитьОбласть("ИтогоНДС|Сумма");
		
		ТабличныйДокумент.Вывести(ОбластьНомера);
		Если ВыводитьКоды Тогда
			ТабличныйДокумент.Присоединить(ОбластьКодов);
		КонецЕсли;
		Если СуммаНДС <> 0 Тогда
			ОбластьДанных.Параметры.Заполнить(Новый Структура("НДС", ?(СведенияОДокументе.СуммаВключаетНДС, НСтр("ru='В том числе НДС:'"), НСтр("ru='Сумма НДС:'"))));
			ОбластьСуммы.Параметры.Заполнить(Новый Структура("ВсегоНДС", ОбщегоНазначенияБПВызовСервера.ФорматСумм(СуммаНДС)));
		Иначе
			ОбластьДанных.Параметры.Заполнить(Новый Структура("НДС", НСтр("ru='Без налога (НДС)'")));
			ОбластьСуммы.Параметры.Заполнить(Новый Структура("ВсегоНДС", НСтр("ru='-'")));
		КонецЕсли;
		ТабличныйДокумент.Присоединить(ОбластьДанных);
		
		ТабличныйДокумент.Присоединить(ОбластьСуммы);
		
		// Вывести ИтогоКОплате
		ОбластьНомера = Макет.ПолучитьОбласть("ИтогоКОплате|НомерСтроки");
		ОбластьКодов  = Макет.ПолучитьОбласть("ИтогоКОплате|КолонкаКодов");
		ОбластьДанных = Макет.ПолучитьОбласть("ИтогоКОплате|Данные");
		ОбластьСуммы  = Макет.ПолучитьОбласть("ИтогоКОплате|Сумма");
		ТабличныйДокумент.Вывести(ОбластьНомера);
		Если ВыводитьКоды Тогда
			ТабличныйДокумент.Присоединить(ОбластьКодов);
		КонецЕсли;
		ТабличныйДокумент.Присоединить(ОбластьДанных);
		СуммаКОплате = Сумма + ?(СведенияОДокументе.СуммаВключаетНДС, 0, СуммаНДС);
		ОбластьСуммы.Параметры.Заполнить(Новый Структура("ИтогоКОплате", ОбщегоНазначенияБПВызовСервера.ФорматСумм(СуммаКОплате)));
		ТабличныйДокумент.Присоединить(ОбластьСуммы);
		
		// Вывести Сумму прописью
		ОбластьМакета = Макет.ПолучитьОбласть("СуммаПрописью");
		СуммаКПрописи = Сумма + ?(СведенияОДокументе.СуммаВключаетНДС, 0, СуммаНДС);
		ИтоговаяСтрока = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(НСтр("ru='Всего наименований %1, на сумму %2'"),
			НомерСтроки, ОбщегоНазначенияБПВызовСервера.ФорматСумм(СуммаКПрописи, СведенияОДокументе.Валюта));
		СуммаПрописью = ОбщегоНазначенияБПВызовСервера.СформироватьСуммуПрописью(СуммаКПрописи, СведенияОДокументе.Валюта);
		ДанныеПечатиСуммаПрописью = Новый Структура;
		ДанныеПечатиСуммаПрописью.Вставить("ИтоговаяСтрока", ИтоговаяСтрока);
		ДанныеПечатиСуммаПрописью.Вставить("СуммаПрописью", СуммаПрописью);
		ОбластьМакета.Параметры.Заполнить(ДанныеПечатиСуммаПрописью);
		ТабличныйДокумент.Вывести(ОбластьМакета);
		
		ОбластьМакета = Макет.ПолучитьОбласть("Подвал");
		
		ОбластьМакета.Параметры.Заполнить(ПараметрыОбласти);
		ОбластьМакета.Параметры.Заполнить(СведенияОДокументе);
		
		ТабличныйДокумент.Вывести(ОбластьМакета);
		
		// В табличном документе зададим имя области, в которую был 
		// выведен объект. Нужно для возможности печати покомплектно.
		УправлениеПечатью.ЗадатьОбластьПечатиДокумента(ТабличныйДокумент, 
			НомерСтрокиНачало, ОбъектыПечати, СведенияОДокументе.Документ);
			
		УправлениеПечатьюБП.ДополнитьДокументПодписьюИПечатью(ТабличныйДокумент, СведенияОДокументе, ОбъектыПечати, ПараметрыПечати);

	КонецЦикла;

	Возврат ТабличныйДокумент;

КонецФункции

