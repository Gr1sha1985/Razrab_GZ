// Запускает фоновое задание, которые выполнит пересчет итогов регистра бухгалтерии, вызвав метод платформы. 
//
// Параметры:
//  МестоРасхождения - Структура - см. БухгалтерскиеОтчетыКлиентСервер.МестоРасхожденияИтогов()
//
// Возвращаемое значение:
//   Структура   - см. ДлительныеОперации.ВыполнитьВФоне()
//
Функция ПересчитатьИтоги(МестоРасхождения) Экспорт
	
	КлючФоновогоЗадания = "ПересчетИтоговХозрасчетный";
	
	ПараметрыВыполнения = ДлительныеОперации.ПараметрыВыполненияВФоне(МестоРасхождения.ИдентификаторФормы);
	ПараметрыВыполнения.ОжидатьЗавершение = 0; // заведомо известно, что операция длительная и требует фонового выполнения
	ПараметрыВыполнения.НаименованиеФоновогоЗадания = НСтр("ru = 'Пересчет итогов регистра бухгалтерии'");
	ПараметрыВыполнения.КлючФоновогоЗадания = КлючФоновогоЗадания;
	
	ОтборЗаданий = Новый Структура;
	ОтборЗаданий.Вставить("Состояние", СостояниеФоновогоЗадания.Активно);
	ОтборЗаданий.Вставить("Ключ", КлючФоновогоЗадания);
	
	УстановитьПривилегированныйРежим(Истина);
	Отказ = (ФоновыеЗадания.ПолучитьФоновыеЗадания(ОтборЗаданий).Количество() > 0);
	УстановитьПривилегированныйРежим(Ложь);
	
	Если Отказ Тогда
		
		ДлительнаяОперация = Новый Структура;
		ДлительнаяОперация.Вставить("Статус", "Ошибка");
		ДлительнаяОперация.Вставить("КраткоеПредставлениеОшибки",
			НСтр("ru = 'Пересчет итогов ранее уже был запущен и выполняется.
						|Через некоторое время cформируйте отчет заново.'"));
		ДлительнаяОперация.Вставить("ПодробноеПредставлениеОшибки", ДлительнаяОперация.КраткоеПредставлениеОшибки);
		ЗаписьЖурналаРегистрации(НСтр("ru = 'Расхождение итогов.Параллельный запуск'", ОбщегоНазначения.КодОсновногоЯзыка()),
				УровеньЖурналаРегистрации.Предупреждение, , , ДлительнаяОперация.ПодробноеПредставлениеОшибки);

	Иначе

		ДлительнаяОперация = ДлительныеОперации.ВыполнитьВФоне("БухгалтерскиеОтчеты.ПересчитатьИтоги",
			МестоРасхождения, ПараметрыВыполнения);

	КонецЕсли;
		
	Возврат ДлительнаяОперация;
	
КонецФункции

