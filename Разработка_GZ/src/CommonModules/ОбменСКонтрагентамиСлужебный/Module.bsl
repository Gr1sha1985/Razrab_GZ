		|	(ЕСТЬNULL(НастройкиВнутреннегоЭДО.Формировать, ЛОЖЬ)
		|			ИЛИ НЕ АктуальностьЭлектронныхДокументов.ОбъектУчета ЕСТЬ NULL)
		|	И НЕ ВидыВнутреннихДокументовЭДО.ПометкаУдаления
		|	И &УсловиеПоИдентификатору
		|
		|СГРУППИРОВАТЬ ПО
		|	ВЫБОР
		|		КОГДА ЕСТЬNULL(АктуальностьЭлектронныхДокументов.ЭлектронныйДокумент.СостояниеЭДО, ЗНАЧЕНИЕ(Перечисление.СостоянияВерсийЭД.НеСформирован)) = ЗНАЧЕНИЕ(Перечисление.СостоянияВерсийЭД.НеСформирован)
		|				ИЛИ ЕСТЬNULL(АктуальностьЭлектронныхДокументов.ЭлектронныйДокумент.СостояниеЭДО, ЗНАЧЕНИЕ(Перечисление.СостоянияВерсийЭД.НеСформирован)) = ЗНАЧЕНИЕ(Перечисление.СостоянияВерсийЭД.ЗакрытПринудительно)
		|			ТОГДА 0
		|		КОГДА АктуальностьЭлектронныхДокументов.ЭлектронныйДокумент.СостояниеЭДО = ЗНАЧЕНИЕ(Перечисление.СостоянияВерсийЭД.Аннулирован)
		|				ИЛИ АктуальностьЭлектронныхДокументов.ЭлектронныйДокумент.СостояниеЭДО = ЗНАЧЕНИЕ(Перечисление.СостоянияВерсийЭД.ОбменЗавершен)
		|			ТОГДА 2
		|		ИНАЧЕ 1
		|	КОНЕЦ,
		|	ЕСТЬNULL(АктуальностьЭлектронныхДокументов.ЭлектронныйДокумент.СостояниеЭДО, ЗНАЧЕНИЕ(Перечисление.СостоянияВерсийЭД.НеСформирован))		
		|
		|УПОРЯДОЧИТЬ ПО
		|	ПриоритетСостояниеЭДО";
	
	Если ЗначениеЗаполнено(ИдентификаторКомандыПечати) Тогда
		УсловиеПоИдентификатору = "ВидыВнутреннихДокументовЭДО.ИдентификаторКомандыПечати = &ИдентификаторКомандыПечати";
		Запрос.Параметры.Вставить("ИдентификаторКомандыПечати", ИдентификаторКомандыПечати);
	Иначе 
		УсловиеПоИдентификатору = "ИСТИНА";
	КонецЕсли;
	
	Запрос.Текст = СтрЗаменить(Запрос.Текст, "&УсловиеПоИдентификатору", УсловиеПоИдентификатору);
	
	Запрос.Параметры.Вставить("ДанныеОбъектовУчета", ДанныеОбъектовУчета);
	
	УстановитьПривилегированныйРежим(Истина);
	РезультатЗапроса = Запрос.Выполнить().Выгрузить();
	УстановитьПривилегированныйРежим(Ложь);
	
	ПредставлениеСтатуса = "";
	
	ЭДОНачат = Ложь;
	
	Если ЗначениеЗаполнено(РезультатЗапроса) Тогда 
		
		МинимальныйПриоритет = РезультатЗапроса[0].ПриоритетСостояниеЭДО;

		Если РезультатЗапроса.Количество() = 1 Тогда 
			
			ПредставлениеСтатуса = Строка(РезультатЗапроса[0].СостояниеЭД);
			Если РезультатЗапроса[0].КоличествоДокументов > 1 Тогда
				ШаблонКоличестваДокументов = "%1 (%2)";
				ПредставлениеСтатуса = СтрШаблон(ШаблонКоличестваДокументов, ПредставлениеСтатуса, РезультатЗапроса[0].КоличествоДокументов);  
			КонецЕсли;
			
			ЭДОНачат = Не МинимальныйПриоритет = 0;
			
		Иначе
			
			РезультатЗапроса.Свернуть("ПриоритетСостояниеЭДО","КоличествоДокументов");
			
			КоличествоДокументовВМинимальномСостоянии = РезультатЗапроса[0].КоличествоДокументов;
			
			Состояние = ПриоритетыСостояний[МинимальныйПриоритет]; 
			ВсегоВозможныхДокументов = РезультатЗапроса.Итог("КоличествоДокументов");
			
			Если РезультатЗапроса.Количество() = 1 Тогда
				Шаблон = "%1 (%2)";
				ПредставлениеСтатуса = СтрШаблон(Шаблон, Состояние, ВсегоВозможныхДокументов);  
			Иначе
				Шаблон = НСтр("ru = '%1 (%2/%3)'");
				ПредставлениеСтатуса = СтрШаблон(Шаблон, Состояние, КоличествоДокументовВМинимальномСостоянии, ВсегоВозможныхДокументов); 
			КонецЕсли;
			
			ЭДОНачат = Истина;
			
		КонецЕсли;
		
	КонецЕсли;

	Возврат ПредставлениеСтатуса;
	
КонецФункции

