// Выполняет получение настроек обмена для формирования ЭД
//
Функция ПолучитьНастройкиОбмена(МассивОснований, ДопПараметры)
	
	Если Не ЗначениеЗаполнено(МассивОснований) Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	ВыводитьСообщение = Не ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(
		ДопПараметры, "ИспользоватьПомощникУстраненияОшибок", Ложь);
	НастройкиОбъектов = Новый Соответствие;
	КэшНастроекОбмена = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(ДопПараметры, "НастройкиОбмена", Новый Соответствие);
	ВидЭД = ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(ДопПараметры, "ВидЭД", "");
	МассивОшибок = Новый Массив;
	ЕстьОшибки = Ложь;
	
	ОшибкиПоОднойНастройкеОбмена = Ложь;
	КлючНастройкиОтправки = НовыйКлючНастройкиОтправки();
	
	ОшибкиПоОднойНастройкеВнутреннегоЭДО = Ложь;
	ИсходныеПараметрыНастройкиВнутреннегоЭДО = Неопределено;
	
	Для Каждого СсылкаНаОбъект Из МассивОснований Цикл
		НастройкиОбмена = КэшНастроекОбмена.Получить(СсылкаНаОбъект);
		Если НастройкиОбмена <> Неопределено Тогда
			НастройкиОбъектов.Вставить(СсылкаНаОбъект, НастройкиОбмена);
			Продолжить;
		КонецЕсли;
		
		ПараметрыЭД = ЗаполнитьПараметрыЭДПоИсточнику(СсылкаНаОбъект);
		
		Если ПараметрыЭД.НаправлениеЭД = Перечисления.НаправленияЭД.Внутренний Тогда
			НастройкиОбмена = Новый Структура;
			НастройкиОбмена.Вставить("Формировать", Истина);
			НастройкиОбмена.Вставить("НаправлениеЭД", Перечисления.НаправленияЭД.Внутренний);
			НастройкиОбмена.Вставить("НастройкиПоВидам", Новый Массив);
			
			Если ДопПараметры.Свойство("КлючиНастроекОбъектов")
				И ДопПараметры.КлючиНастроекОбъектов[СсылкаНаОбъект] <> Неопределено Тогда
				
				КлючиНастроек = ДопПараметры.КлючиНастроекОбъектов[СсылкаНаОбъект];
				НастройкиОбмена.НастройкиПоВидам = НастройкиПоВидамВнутреннихДокументов(КлючиНастроек);
				
				Если КлючиНастроек.Количество() <> НастройкиОбмена.НастройкиПоВидам.Количество() Тогда
					ВидыДокументовСНастройками = Новый Соответствие;
					Для Каждого Настройки Из НастройкиОбмена.НастройкиПоВидам Цикл
						ВидыДокументовСНастройками.Вставить(Настройки.ВидВнутреннегоДокумента, Истина);
					КонецЦикла;
					Для Каждого КлючНастройки Из КлючиНастроек Цикл
						Если ВидыДокументовСНастройками[КлючНастройки.ВидВнутреннегоДокумента] = Неопределено Тогда
							ЕстьОшибки = Истина;
							ДобавитьОшибкуПолученияНастройкиВнутреннегоЭДО(МассивОшибок, СсылкаНаОбъект, КлючНастройки);
							ТекущиеПараметрыНастройки = ПараметрыСравненияНастроекВнутреннегоЭДО(
								СсылкаНаОбъект, КлючНастройки.Организация, КлючНастройки.ВидВнутреннегоДокумента);
							ПроверитьРазличиеПараметровНастроекВнутреннегоЭДО(ИсходныеПараметрыНастройкиВнутреннегоЭДО,
								ТекущиеПараметрыНастройки, ОшибкиПоОднойНастройкеВнутреннегоЭДО);
						КонецЕсли;
					КонецЦикла;
				КонецЕсли;
				
			Иначе
				Настройки = НастройкиОсновногоВидаВнутреннегоДокумента(СсылкаНаОбъект, ПараметрыЭД.Организация);
				Если ЗначениеЗаполнено(Настройки)
					И Настройки.ЭтоОсновнойВидДокумента Тогда
					НастройкиОбмена.НастройкиПоВидам.Добавить(Настройки);
				Иначе
					ЕстьОшибки = Истина;
					ПараметрыПоискаНастройки = Новый Структура("Организация", ПараметрыЭД.Организация);
					ДобавитьОшибкуПолученияНастройкиВнутреннегоЭДО(МассивОшибок, СсылкаНаОбъект, ПараметрыПоискаНастройки, Настройки);
					ТекущиеПараметрыНастройки = ПараметрыСравненияНастроекВнутреннегоЭДО(СсылкаНаОбъект, ПараметрыЭД.Организация);
					ПроверитьРазличиеПараметровНастроекВнутреннегоЭДО(ИсходныеПараметрыНастройкиВнутреннегоЭДО,
						ТекущиеПараметрыНастройки, ОшибкиПоОднойНастройкеВнутреннегоЭДО);
					Если ЗначениеЗаполнено(Настройки) Тогда
						ОшибкиПоОднойНастройкеВнутреннегоЭДО = Ложь;
					КонецЕсли;
				КонецЕсли;
			КонецЕсли;
			
			Если ЗначениеЗаполнено(НастройкиОбмена.НастройкиПоВидам) Тогда
				НастройкиОбъектов.Вставить(СсылкаНаОбъект, НастройкиОбмена);
			КонецЕсли;
			
			Продолжить;
		КонецЕсли;
		
		Если ОпределитьДействующуюНастройкуЭДО(СсылкаНаОбъект, ПараметрыЭД, ВидЭД, ВыводитьСообщение)
			И ПараметрыЭД.ЭтоАктуальныйВидЭД Тогда
			
			НастройкиОбмена = ОпределитьНастройкиОбменаЭД(ПараметрыЭД);
			ДобавитьПредупрежденияПоНастройкеОбменаНаДату(СсылкаНаОбъект, НастройкиОбмена, МассивОшибок);
			
		ИначеЕсли Не ВыводитьСообщение Тогда
			
			ЕстьОшибки = Истина;
			ДобавитьОшибкуПолученияНастроекОбмена(СсылкаНаОбъект, ПараметрыЭД, МассивОшибок);
			
			Если ПараметрыЭД.ЭтоАктуальныйВидЭД Тогда
				
				Если КлючНастройкиОтправки.Отправитель = Неопределено Тогда
					КлючНастройкиОтправки.Отправитель = ПараметрыЭД.Организация;
					КлючНастройкиОтправки.Получатель  = ПараметрыЭД.Контрагент;
					КлючНастройкиОтправки.Договор     = ПараметрыЭД.ДоговорКонтрагента;
					
					ОшибкиПоОднойНастройкеОбмена = Истина;
					
				ИначеЕсли КлючНастройкиОтправки.Отправитель <> ПараметрыЭД.Организация
					Или КлючНастройкиОтправки.Получатель <> ПараметрыЭД.Контрагент
					Или КлючНастройкиОтправки.Договор <> ПараметрыЭД.ДоговорКонтрагента Тогда
					
					ОшибкиПоОднойНастройкеОбмена = Ложь;
					
				КонецЕсли;
				
			КонецЕсли;
			
		КонецЕсли;
		
		Если НастройкиОбмена = Неопределено Тогда
			Продолжить;
		КонецЕсли;
		
		АктуализироватьФорматыЭДВНастройкахОбмена(НастройкиОбмена);
		НастройкиОбъектов.Вставить(СсылкаНаОбъект, НастройкиОбмена);
	КонецЦикла;
	
	Если Не ЕстьОшибки Тогда
		Возврат НастройкиОбъектов;
	КонецЕсли;
	
	Если НастройкиОбъектов.Количество() Тогда
		ОшибкиПоОднойНастройкеОбмена = Ложь;
		ОшибкиПоОднойНастройкеВнутреннегоЭДО = Ложь;
	КонецЕсли;
	
	Если Не ДопПараметры.Свойство("ОшибкиПриФормированииДокументов") Тогда
		ДопПараметры.Вставить("ОшибкиПриФормированииДокументов", Новый Массив);
	КонецЕсли;
	
	Если (ОшибкиПоОднойНастройкеОбмена + ОшибкиПоОднойНастройкеВнутреннегоЭДО) <> 1 Тогда
		ОбщегоНазначенияКлиентСервер.ДополнитьМассив(ДопПараметры.ОшибкиПриФормированииДокументов, МассивОшибок);
	ИначеЕсли ОшибкиПоОднойНастройкеОбмена Тогда
		ОшибкаНастройкиОтправки = Новый Структура("ОшибкаНастройкиОтправки",
			Новый Структура("КлючНастройкиОтправки, ПараметрыЭД", КлючНастройкиОтправки, ПараметрыЭД));
		ДопПараметры.ОшибкиПриФормированииДокументов.Добавить(ОшибкаНастройкиОтправки);
	Иначе
		ПараметрыНастройки = Новый Структура;
		ПараметрыНастройки.Вставить("Организация", ИсходныеПараметрыНастройкиВнутреннегоЭДО.Организация);
		ПараметрыНастройки.Вставить("ВидВнутреннегоДокумента", ИсходныеПараметрыНастройкиВнутреннегоЭДО.ВидВнутреннегоДокумента);
		ИдентификаторОбъектаУчета = ОбщегоНазначения.ИдентификаторОбъектаМетаданных(
			ИсходныеПараметрыНастройкиВнутреннегоЭДО.ПолноеИмяОбъекта);
		ПараметрыНастройки.Вставить("ИдентификаторОбъектаУчета", ИдентификаторОбъектаУчета);
		ОшибкаНастройкиВнутреннегоЭДО = Новый Структура("ОшибкаНастройкиВнутреннегоЭДО",
			Новый Структура("ПараметрыНастройки", ПараметрыНастройки));
		ДопПараметры.ОшибкиПриФормированииДокументов.Добавить(ОшибкаНастройкиВнутреннегоЭДО);
	КонецЕсли;
	
	Возврат Неопределено;
	
КонецФункции

Процедура ДобавитьОшибкуПолученияНастроекОбмена(Ссылка, ПараметрыЭД, МассивОшибок)
	
	ДанныеОшибки = ЭлектронноеВзаимодействиеСлужебныйКлиентСервер.НовыеПараметрыОшибки();
	Если ПараметрыЭД.ЭтоАктуальныйВидЭД Тогда
		ТекстОшибки = НСтр("ru = 'Не найдены настройки обмена'");
		ИмяРаздела = "НастройкиОтправки";
	Иначе
		ТекстОшибки = ОбменСКонтрагентамиСлужебныйКлиентСервер.ТекстСообщенияВидЭДНеПоддерживается(ПараметрыЭД.ВидЭД,
			НСтр("ru = 'Отправка документа невозможна.'"));
		ИмяРаздела = "ОсновныеПоля";
	КонецЕсли;
	
	ДанныеОшибки.ТекстОшибки = ТекстОшибки;
	ОшибкиЗаполнения = ОбменСКонтрагентамиВнутренний.НовыеПараметрыОшибокЗаполнения(
		ОбщегоНазначенияКлиентСервер.ЗначениеВМассиве(ДанныеОшибки), ИмяРаздела);
	
	ПараметрыЭД.Вставить("ВерсияФормата", Неопределено);
	ПараметрыФормирования = Новый Структура("НастройкиОбмена", ПараметрыЭД);
	
	Ошибки = ОбменСКонтрагентамиВнутренний.НовыеПараметрыПомощникаУстраненияОшибок(Ссылка,
		ПараметрыФормирования, ОшибкиЗаполнения);
	
	МассивОшибок.Добавить(Ошибки.ОшибкиПриФормированииДокумента);
	
КонецПроцедуры

Процедура ДобавитьПредупрежденияПоНастройкеОбменаНаДату(Ссылка, НастройкиОбмена, МассивОшибок)
	
	Результат = ПредупрежденияПоНастройкеОбменаНаДату(НастройкиОбмена);
	
	СписокПредупреждений = Неопределено;
	Если Не ЗначениеЗаполнено(Результат) 
		ИЛИ Не Результат.Свойство("ПоИдентификатору", СписокПредупреждений) Тогда
		Возврат;
	КонецЕсли;
	
	СписокОшибок = Новый Массив;
	Для Каждого СтрокаТЧ Из СписокПредупреждений Цикл
		ДанныеОшибки = Новый Структура("ТекстОшибки, Заблокировать","", Ложь);
		ДанныеОшибки.ТекстОшибки = ПредставлениеПредупрежденияПоИмени(СтрокаТЧ.Ключ, СтрокаТЧ.Значение, ДанныеОшибки.Заблокировать);
		СписокОшибок.Добавить(ДанныеОшибки);
	КонецЦикла;
	
	ОшибкиЗаполнения = ОбменСКонтрагентамиВнутренний.НовыеПараметрыОшибокЗаполнения(
		СписокОшибок , "ПредупрежденияПоИдентификатору");
	ПараметрыФормирования = Новый Структура("НастройкиОбмена", НастройкиОбмена);
	Ошибки = ОбменСКонтрагентамиВнутренний.НовыеПараметрыПомощникаУстраненияОшибок(Ссылка,
		ПараметрыФормирования, ОшибкиЗаполнения, Истина);
	
	МассивОшибок.Добавить(Ошибки.ОшибкиПриФормированииДокумента);
	
КонецПроцедуры

Процедура ДобавитьОшибкуПолученияНастройкиВнутреннегоЭДО(МассивОшибок, Ссылка, ПараметрыПоиска, Настройки = Неопределено)
	
	Ошибка = ЭлектронноеВзаимодействиеКлиентСервер.НовыеПараметрыОбработкиОшибки();
	
	Если ЗначениеЗаполнено(Настройки)
		И Не ЗначениеЗаполнено(ОбщегоНазначенияКлиентСервер.СвойствоСтруктуры(ПараметрыПоиска, "ВидВнутреннегоДокумента"))
		И Не Настройки.ЭтоОсновнойВидДокумента Тогда
		
		ЗначенияКлюча = Новый Структура;
		ЗначенияКлюча.Вставить("Организация", Настройки.Организация);
		ЗначенияКлюча.Вставить("ВидВнутреннегоДокумента", Настройки.ВидВнутреннегоДокумента);
		
		Ошибка.КлючСообщения = РегистрыСведений.НастройкиВнутреннегоЭДО.СоздатьКлючЗаписи(ЗначенияКлюча);
		Если Настройки.Формировать Тогда
			Ошибка.ТекстОшибки = СтрШаблон(НСтр("ru = 'Не указана печатная форма по умолчанию для вида документа ""%1""'"),
				Настройки.СинонимОбъектаУчета);
		Иначе
			Ошибка.ТекстОшибки = СтрШаблон(НСтр("ru = 'Формирование документов на основании ""%1"" запрещено'"),
				Настройки.СинонимОбъектаУчета);
		КонецЕсли;
		
		ИмяРаздела = "ОсновныеПоля";
		
	Иначе
		
		Ошибка.ТекстОшибки = НСтр("ru = 'Не найдены настройки внутреннего ЭДО'");
		ИмяРаздела = "НастройкиВнутреннегоЭДО";
		
	КонецЕсли;
	
	ОшибкиЗаполнения = ОбменСКонтрагентамиВнутренний.НовыеПараметрыОшибокЗаполнения(
		ОбщегоНазначенияКлиентСервер.ЗначениеВМассиве(Ошибка), ИмяРаздела);
	
	ПараметрыПоиска.Вставить("ВидЭД", Перечисления.ВидыЭД.Внутренний);
	ПараметрыФормирования = Новый Структура("НастройкиОбмена", ПараметрыПоиска);
	
	Ошибки = ОбменСКонтрагентамиВнутренний.НовыеПараметрыПомощникаУстраненияОшибок(Ссылка,
		ПараметрыФормирования, ОшибкиЗаполнения);
	
	МассивОшибок.Добавить(Ошибки.ОшибкиПриФормированииДокумента);
	
КонецПроцедуры

Процедура ДобавитьОшибкуОтсутствияДанныхДляФормированияВнутреннегоЭДО(МассивОшибок, Ссылка, ПараметрыПоиска, Настройки = Неопределено)
	
	Ошибка = ЭлектронноеВзаимодействиеКлиентСервер.НовыеПараметрыОбработкиОшибки();
	
	Ошибка.ТекстОшибки = СтрШаблон(НСтр("ru = 'Нет данных для формирования ""%1""'"),
				Настройки.НаименованиеВидаДокумента);
	
	ОшибкиЗаполнения = ОбменСКонтрагентамиВнутренний.НовыеПараметрыОшибокЗаполнения(
		ОбщегоНазначенияКлиентСервер.ЗначениеВМассиве(Ошибка), "ОсновныеПоля");     		
		
	Настройки.Вставить("ВидЭД", Перечисления.ВидыЭД.Внутренний);
	ПараметрыФормирования = Новый Структура("НастройкиОбмена", Настройки);
	
	Ошибки = ОбменСКонтрагентамиВнутренний.НовыеПараметрыПомощникаУстраненияОшибок(Ссылка,
		ПараметрыФормирования, ОшибкиЗаполнения);
	
	МассивОшибок.Добавить(Ошибки.ОшибкиПриФормированииДокумента);
	
КонецПроцедуры

Функция ПараметрыСравненияНастроекВнутреннегоЭДО(СсылкаНаОбъект, Организация, Вид = Неопределено);
	Параметры = Новый Структура;
	Параметры.Вставить("Организация", Организация);
	Параметры.Вставить("ВидВнутреннегоДокумента", Вид);
	Параметры.Вставить("ПолноеИмяОбъекта", СсылкаНаОбъект.Метаданные().ПолноеИмя());
	Возврат Параметры;
