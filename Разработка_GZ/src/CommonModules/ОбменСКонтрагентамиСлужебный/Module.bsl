		|		ПО НастройкиВнутреннегоЭДО.Организация = ПараметрыОбъектовУчета.Организация
		|			И НастройкиВнутреннегоЭДО.ВидВнутреннегоДокумента = ПараметрыОбъектовУчета.ВидВнутреннегоДокумента
		|			И (ПараметрыОбъектовУчета.ВидВнутреннегоДокумента <> &ПустойВидВнутреннегоДокумента)
		|			И (ВидыВнутреннихДокументовЭДО.ИдентификаторОбъектаУчета = ПараметрыОбъектовУчета.ИдентификаторОбъекта)
		|ГДЕ
		|	НастройкиВнутреннегоЭДО.Формировать
		|
		|ОБЪЕДИНИТЬ ВСЕ
		|
		|ВЫБРАТЬ
		|	НастройкиВнутреннегоЭДО.ВидВнутреннегоДокумента,
		|	НастройкиВнутреннегоЭДО.Организация,
		|	ПараметрыОбъектовУчета.Ссылка КАК ОбъектУчета,
		|	ПараметрыОбъектовУчета.ИдентификаторОбъекта КАК ИдентификаторОбъекта
		|ИЗ
		|	РегистрСведений.НастройкиВнутреннегоЭДО КАК НастройкиВнутреннегоЭДО
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.ВидыВнутреннихДокументовЭДО КАК ВидыВнутреннихДокументовЭДО
		|		ПО НастройкиВнутреннегоЭДО.ВидВнутреннегоДокумента = ВидыВнутреннихДокументовЭДО.Ссылка
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ ПараметрыОбъектовУчета КАК ПараметрыОбъектовУчета
		|		ПО НастройкиВнутреннегоЭДО.Организация = ПараметрыОбъектовУчета.Организация
		|			И (ПараметрыОбъектовУчета.ВидВнутреннегоДокумента = &ПустойВидВнутреннегоДокумента)
		|			И (ВидыВнутреннихДокументовЭДО.ИдентификаторОбъектаУчета = ПараметрыОбъектовУчета.ИдентификаторОбъекта)
		|ГДЕ
		|	НастройкиВнутреннегоЭДО.Формировать";
	
	РезультатыЗапросов = Запрос.ВыполнитьПакет();
	
	Выборка = РезультатыЗапросов[2].Выбрать();
	
	ПараметрыОпределенияДействия = Новый Структура("Ссылка, ТипЭД, СтатусЭД");
	
	Пока Выборка.Следующий() Цикл
		
		ПараметрыОпределенияДействия.Ссылка = Выборка.ФайлЭлектронногоДокумента;
		ПараметрыОпределенияДействия.ТипЭД = Выборка.ТипЭлементаВерсииЭД;
		ПараметрыОпределенияДействия.СтатусЭД = Выборка.СтатусЭД;
		
		ОжидаемоеДействие = ОжидаемоеДействиеПоТекущемуСтатусу(ПараметрыОпределенияДействия);
		
		НоваяСтрока = СтатусыДокументов.Добавить();
		НоваяСтрока.ОбъектУчета               = Выборка.ОбъектУчета;
		НоваяСтрока.Организация               = Выборка.Организация;
		НоваяСтрока.ЭлектронныйДокумент       = Выборка.ЭлектронныйДокумент;
		НоваяСтрока.ФайлЭлектронногоДокумента = Выборка.ФайлЭлектронногоДокумента;
		НоваяСтрока.ВидВнутреннегоДокумента   = Выборка.ВидВнутреннегоДокумента;
		НоваяСтрока.ПредставлениеДокумента    = ПолучитьПредставлениеЭД(Выборка);
		НоваяСтрока.ОжидаемоеДействие         = ОжидаемоеДействие;
		
		Если Не ЗначениеЗаполнено(ОжидаемоеДействие) Тогда
			НоваяСтрока.ПредставлениеСостояния = СтрШаблон("<%1>", Выборка.СостояниеЭДО);
		ИначеЕсли Выборка.ЭтапПодписанияОтсутствует
			И ОжидаемоеДействие = Перечисления.ОжидаемоеДействиеЭД.Подписать Тогда
			НоваяСтрока.ОжидаемоеДействие = Перечисления.ОжидаемоеДействиеЭД.ПустаяСсылка();
			НоваяСтрока.ПредставлениеСостояния = НСтр("ru = '<Ожидается подписание других лиц>'");
		КонецЕсли;
		
	КонецЦикла;
	
	ВыборкаНастроек = РезультатыЗапросов[3].Выбрать();
	
	ОбъектыУчетаПоИдентификаторам = Новый Соответствие;
	
	ОтборАктуальныхДокументовОбъекта = Новый Структура("ОбъектУчета, ВидВнутреннегоДокумента");
	
	Пока ВыборкаНастроек.Следующий() Цикл
		
		ЗаполнитьЗначенияСвойств(ОтборАктуальныхДокументовОбъекта, ВыборкаНастроек);
		
		Если СтатусыДокументов.НайтиСтроки(ОтборАктуальныхДокументовОбъекта).Количество() Тогда
			Продолжить;
		КонецЕсли;
		
		НоваяСтрока = СтатусыДокументов.Добавить();
		НоваяСтрока.ОбъектУчета             = ВыборкаНастроек.ОбъектУчета;
		НоваяСтрока.Организация             = ВыборкаНастроек.Организация;
		НоваяСтрока.ВидВнутреннегоДокумента = ВыборкаНастроек.ВидВнутреннегоДокумента;
		НоваяСтрока.ПредставлениеДокумента  = ВыборкаНастроек.ВидВнутреннегоДокумента;
		НоваяСтрока.ОжидаемоеДействие       = Перечисления.ОжидаемоеДействиеЭД.Сформировать;
		
		Если ОбъектыУчетаПоИдентификаторам[ВыборкаНастроек.ИдентификаторОбъекта] = Неопределено Тогда
			ОбъектыУчетаПоИдентификаторам.Вставить(ВыборкаНастроек.ИдентификаторОбъекта,
				ОбщегоНазначенияКлиентСервер.ЗначениеВМассиве(ВыборкаНастроек.ОбъектУчета));
		Иначе
			ОбъектыУчетаПоИдентификаторам[ВыборкаНастроек.ИдентификаторОбъекта].Добавить(ВыборкаНастроек.ОбъектУчета);
		КонецЕсли;
		
	КонецЦикла;
	
	Если Не ЗначениеЗаполнено(ОбъектыУчетаПоИдентификаторам) Тогда
		Возврат СтатусыДокументов;
	КонецЕсли;
	
	Выборка = ВыборкаРеквизитовНомерДатаОбъектовУчета(ОбъектыУчетаПоИдентификаторам);
	
	ОтборОбъектаУчета = Новый Структура("ОбъектУчета");
	
	Пока Выборка.Следующий() Цикл
		
		ОтборОбъектаУчета.ОбъектУчета = Выборка.Ссылка;
		НайденныеСтроки = СтатусыДокументов.НайтиСтроки(ОтборОбъектаУчета);
		Если НайденныеСтроки.Количество() = 0 Тогда
			Продолжить;
		КонецЕсли;
		
		Для Каждого СтрокаТаблицы Из НайденныеСтроки Цикл
			
			Если ЗначениеЗаполнено(СтрокаТаблицы.ЭлектронныйДокумент) Тогда
				Продолжить;
			КонецЕсли;
			
			СтрокаТаблицы.ПредставлениеДокумента = ПредставлениеВнутреннегоДокумента(
				СтрокаТаблицы.ВидВнутреннегоДокумента, Выборка.Номер, Выборка.Дата);
			
		КонецЦикла;
	КонецЦикла;
	
	Возврат СтатусыДокументов;
	
КонецФункции

Функция ПараметрыПросмотраАктуальныхДокументов(ОбъектыУчета) Экспорт
	
	ЭлектронныеДокументыОбъектовУчета = Новый Соответствие;
	ПараметрыПросмотраСтатусовОбъектовУчета = Новый Соответствие;
	
	ПараметрыПросмотра = Новый Структура;
	ПараметрыПросмотра.Вставить("ЭлектронныеДокументыОбъектовУчета", ЭлектронныеДокументыОбъектовУчета);
	ПараметрыПросмотра.Вставить("ПараметрыПросмотраСтатусовОбъектовУчета", ПараметрыПросмотраСтатусовОбъектовУчета);
	
	ТекстЗапроса =
		"ВЫБРАТЬ
		|	СостоянияЭД.СсылкаНаОбъект КАК ОбъектУчета,
		|	СостоянияЭД.ЭлектронныйДокумент КАК ЭлектронныйДокумент
		|ИЗ
		|	РегистрСведений.СостоянияЭД КАК СостоянияЭД
		|ГДЕ
		|	СостоянияЭД.СсылкаНаОбъект В(&ОбъектыУчета)";
	
	ИспользоватьВнутренниеДокументыЭДО = ПолучитьФункциональнуюОпцию("ИспользоватьВнутренниеДокументыЭДО");
	Если ИспользоватьВнутренниеДокументыЭДО Тогда
		
		ТекстЗапроса = ТекстЗапроса + ОбщегоНазначения.РазделительПакетаЗапросов() + 
			"ВЫБРАТЬ
			|	АктуальностьЭлектронныхДокументов.ОбъектУчета КАК ОбъектУчета,
			|	АктуальностьЭлектронныхДокументов.ЭлектронныйДокумент КАК ЭлектронныйДокумент,
			|	ЭлектронныйДокументИсходящий.Организация КАК Организация,
			|	ЕСТЬNULL(НастройкиВнутреннегоЭДО.ЭтоОсновнойВидДокумента, ЛОЖЬ) КАК ЭтоОсновнойВидДокумента,
			|	НастройкиВнутреннегоЭДО.ВидВнутреннегоДокумента ЕСТЬ NULL КАК ОтсутствуетНастройка
			|ИЗ
			|	РегистрСведений.АктуальностьЭлектронныхДокументов КАК АктуальностьЭлектронныхДокументов
			|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Документ.ЭлектронныйДокументИсходящий КАК ЭлектронныйДокументИсходящий
			|		ПО АктуальностьЭлектронныхДокументов.ЭлектронныйДокумент = ЭлектронныйДокументИсходящий.Ссылка
			|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.НастройкиВнутреннегоЭДО КАК НастройкиВнутреннегоЭДО
			|		ПО (ЭлектронныйДокументИсходящий.ВидВнутреннегоДокумента = НастройкиВнутреннегоЭДО.ВидВнутреннегоДокумента)
			|			И (ЭлектронныйДокументИсходящий.Организация = НастройкиВнутреннегоЭДО.Организация)
			|ГДЕ
			|	АктуальностьЭлектронныхДокументов.ОбъектУчета В(&ОбъектыУчета)
			|ИТОГИ
			|	МАКСИМУМ(Организация),
			|	МАКСИМУМ(ЭтоОсновнойВидДокумента),
			|	МАКСИМУМ(ОтсутствуетНастройка)
			|ПО
			|	ОбъектУчета";
	КонецЕсли;
	
	Запрос = Новый Запрос(ТекстЗапроса);
	Запрос.УстановитьПараметр("ОбъектыУчета", ОбъектыУчета);
	РезультатыЗапросов = Запрос.ВыполнитьПакет();
	
	Выборка = РезультатыЗапросов[0].Выбрать();
	Пока Выборка.Следующий() Цикл
		Если ЗначениеЗаполнено(Выборка.ЭлектронныйДокумент) Тогда
			ЭлектронныеДокументыОбъектовУчета.Вставить(Выборка.ОбъектУчета, Выборка.ЭлектронныйДокумент);
		КонецЕсли;
	КонецЦикла;
	
	Если Не ИспользоватьВнутренниеДокументыЭДО Тогда
		Возврат ПараметрыПросмотра;
	КонецЕсли;
	
	ВыборкаОбъектовУчета = РезультатыЗапросов[1].Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам);
	Пока ВыборкаОбъектовУчета.Следующий() Цикл
		
		Если Не ВыборкаОбъектовУчета.ЭтоОсновнойВидДокумента Тогда
			ЭлектронныеДокументыОбъектовУчета.Удалить(ВыборкаОбъектовУчета.ОбъектУчета);
			ПараметрыОбъектовУчета = ОбменСКонтрагентамиСлужебныйКлиентСервер.НовыеПараметрыОбъектаУчетаДляПросмотраСтатусовДокументов();
			ПараметрыОбъектовУчета.Ссылка = ВыборкаОбъектовУчета.ОбъектУчета;
			ПараметрыОбъектовУчета.Организация = ВыборкаОбъектовУчета.Организация;
			ПараметрыПросмотраСтатусов = ПараметрыПросмотраСтатусовЭлектронныхДокументов(
				ОбщегоНазначенияКлиентСервер.ЗначениеВМассиве(ПараметрыОбъектовУчета));
			Если ЗначениеЗаполнено(ПараметрыПросмотраСтатусов.АдресДанных) Тогда
				ПараметрыПросмотраСтатусовОбъектовУчета.Вставить(Выборка.ОбъектУчета, ПараметрыПросмотраСтатусов);
			ИначеЕсли ВыборкаОбъектовУчета.ОтсутствуетНастройка
				И ЗначениеЗаполнено(ПараметрыПросмотраСтатусов.ЭлектронныйДокумент) Тогда
				ЭлектронныеДокументыОбъектовУчета.Вставить(ВыборкаОбъектовУчета.ОбъектУчета,
					ПараметрыПросмотраСтатусов.ЭлектронныйДокумент);
			КонецЕсли;
			Продолжить;
		КонецЕсли;
		
		ВыборкаЭлектронныхДокументов = ВыборкаОбъектовУчета.Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам);
		Пока ВыборкаЭлектронныхДокументов.Следующий() Цикл
			Если ВыборкаЭлектронныхДокументов.ЭтоОсновнойВидДокумента Тогда
				ЭлектронныеДокументыОбъектовУчета.Вставить(ВыборкаЭлектронныхДокументов.ОбъектУчета,
					ВыборкаЭлектронныхДокументов.ЭлектронныйДокумент);
				Прервать;
			КонецЕсли;
		КонецЦикла;
		
	КонецЦикла;
	
	Возврат ПараметрыПросмотра;
	
КонецФункции

Функция ВнутреннийДокументОбъектаУчета(ОбъектУчета, ВидВнутреннегоДокумента) Экспорт
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	АктуальностьЭлектронныхДокументов.ЭлектронныйДокумент КАК ЭлектронныйДокумент
		|ИЗ
		|	РегистрСведений.АктуальностьЭлектронныхДокументов КАК АктуальностьЭлектронныхДокументов
		|ГДЕ
		|	АктуальностьЭлектронныхДокументов.ОбъектУчета = &ОбъектУчета
		|	И АктуальностьЭлектронныхДокументов.ВидЭлектронногоДокумента = &ВидЭлектронногоДокумента";
	
	Запрос.УстановитьПараметр("ВидЭлектронногоДокумента", ВидВнутреннегоДокумента);
	Запрос.УстановитьПараметр("ОбъектУчета", ОбъектУчета);
	
	РезультатЗапроса = Запрос.Выполнить();
	Если РезультатЗапроса.Пустой() Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	Выборка = РезультатЗапроса.Выбрать();
	Выборка.Следующий();
	Возврат Выборка.ЭлектронныйДокумент;
	
КонецФункции

