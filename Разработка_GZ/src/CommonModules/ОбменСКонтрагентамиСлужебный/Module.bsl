	СтруктураВозврата.Вставить("ТипЭлементаВерсииЭД");
	СтруктураВозврата.Вставить("ДатаДокументаОтправителя");
	СтруктураВозврата.Вставить("НомерДокументаОтправителя");
	
	Возврат СтруктураВозврата;
	
