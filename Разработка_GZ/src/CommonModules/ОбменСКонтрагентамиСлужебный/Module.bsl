	Если ТипЗнч(ДанныеЭД.Документ.СвСчФакт.СвПокуп) = Тип("СписокXDTO") Тогда
		Если ДанныеЭД.Документ.СвСчФакт.СвПокуп.Количество() > 1 Тогда
			Возврат Истина;
		КонецЕсли;
	КонецЕсли;
	
	Возврат Ложь;
	
