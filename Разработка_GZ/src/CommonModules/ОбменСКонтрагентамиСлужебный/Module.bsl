		Если ИмяФайлаОтвета = Неопределено Тогда
			Значение = ОписаниеОшибки;
		Иначе 
			НоваяВерсияАПИСервиса1СЭДО = Ложь;
			Если НоваяВерсияАПИСервиса1СЭДО Тогда
				ЧтениеJSON = Новый ЧтениеJSON;
				ЧтениеJSON.ОткрытьФайл(ИмяФайлаОтвета);
				СтруктураОтвета = ПрочитатьJSON(ЧтениеJSON);
				ЧтениеJSON.Закрыть();
				Значение = СтруктураОтвета.abonents.Количество() > 0;
			Иначе 
				ДанныеФайла = ПрочитатьТекстИзФайла(ИмяФайлаОтвета, , Истина);
