	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	КлючиНастроек.Организация КАК Организация,
		|	КлючиНастроек.ВидВнутреннегоДокумента КАК ВидВнутреннегоДокумента
		|ПОМЕСТИТЬ ВТ_КлючиНастроек
		|ИЗ
		|	&КлючиНастроек КАК КлючиНастроек
		|;
		|
		|////////////////////////////////////////////////////////////////////////////////
		|ВЫБРАТЬ
		|	НастройкиВнутреннегоЭДО.Организация КАК Организация,
		|	НастройкиВнутреннегоЭДО.ВидВнутреннегоДокумента КАК ВидВнутреннегоДокумента,
		|	НастройкиВнутреннегоЭДО.Формировать КАК Формировать,
		|	НастройкиВнутреннегоЭДО.ВидПодписи КАК ВидПодписи,
		|	НастройкиВнутреннегоЭДО.МаршрутПодписания КАК МаршрутПодписания,
		|	НастройкиВнутреннегоЭДО.ЭтоОсновнойВидДокумента КАК ЭтоОсновнойВидДокумента,
		|	ВидыВнутреннихДокументовЭДО.Наименование КАК НаименованиеВидаДокумента,
		|	ВидыВнутреннихДокументовЭДО.ИдентификаторКомандыПечати КАК ИдентификаторКомандыПечати,
		|	ВидыВнутреннихДокументовЭДО.ИдентификаторОбъектаУчета КАК ИдентификаторОбъектаУчета,
		|	ВидыВнутреннихДокументовЭДО.ИдентификаторОбъектаУчета.Синоним КАК СинонимОбъектаУчета
		|ИЗ
		|	РегистрСведений.НастройкиВнутреннегоЭДО КАК НастройкиВнутреннегоЭДО
		|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.ВидыВнутреннихДокументовЭДО КАК ВидыВнутреннихДокументовЭДО
		|		ПО НастройкиВнутреннегоЭДО.ВидВнутреннегоДокумента = ВидыВнутреннихДокументовЭДО.Ссылка
		|ГДЕ
		|	(НастройкиВнутреннегоЭДО.Организация, НастройкиВнутреннегоЭДО.ВидВнутреннегоДокумента) В
		|			(ВЫБРАТЬ
		|				ВТ_КлючиНастроек.Организация,
		|				ВТ_КлючиНастроек.ВидВнутреннегоДокумента
		|			ИЗ
		|				ВТ_КлючиНастроек)";
	
	Запрос.УстановитьПараметр("КлючиНастроек", ТаблицаКлючей);
	
	Выборка = Запрос.Выполнить().Выбрать();
	
	НастройкиПоВидам = Новый Массив;
	Пока Выборка.Следующий() Цикл
		Настройки = НовыеНастройкиВнутреннегоЭДО();
		ЗаполнитьЗначенияСвойств(Настройки, Выборка);
		НастройкиПоВидам.Добавить(Настройки);
	КонецЦикла;
	
	Возврат НастройкиПоВидам;
	
