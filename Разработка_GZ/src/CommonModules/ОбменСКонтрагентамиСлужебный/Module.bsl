							СтруктураЭлектроннойПодписи.Вставить("ИмяБезРасширения", СтруктураФайлаДопДанныхЭП.ИмяБезРасширения);
							СтруктураЭлектроннойПодписи.Вставить("Расширение",       СтруктураФайлаДопДанныхЭП.Расширение);
							СтруктураЭлектроннойПодписи.Вставить("СсылкаНаЭДПрисоединенныйФайл",
								СтруктураВложения.СсылкаНаЭДПрисоединенныйФайл);
								
							
							МассивЭП.Добавить(СтруктураЭлектроннойПодписи);
						КонецЦикла;
					КонецЕсли;
					
				КонецЦикла;
			КонецЦикла;
			
			СтруктураПакетаЭД.Вставить("ПакетЭДСсылка",          ПакетЭД);
			СтруктураПакетаЭД.Вставить("МассивЭД",               МассивЭД);
			СтруктураПакетаЭД.Вставить("МассивЭП",               МассивЭП);
			СтруктураПакетаЭД.Вставить("СтатусПриглашения",      Неопределено);
			СтруктураПакетаЭД.Вставить("Приглашение",            Неопределено);
			СтруктураПакетаЭД.Вставить("ПараметрыКарточки",      Неопределено);
			ДанныеПакетовЭД.Добавить(СтруктураПакетаЭД);
			
			Если (СтатусыПакетов[ПакетЭД] = Перечисления.СтатусыПакетовЭД.Неизвестный
				Или СтатусыПакетов[ПакетЭД] = Перечисления.СтатусыПакетовЭД.КРаспаковке)
				И ТипЗнч(СтруктураВложения) = Тип("Структура") И СтруктураВложения.Количество() Тогда
				Если ТипЗнч(СтруктураФайлаКарточки) = Тип("Структура") Тогда
					СтруктураПакетаЭД.ПараметрыКарточки = ОбменСКонтрагентамиВнутренний.ПараметрыКарточкиВходящегоПакета(СтруктураФайлаКарточки);
				КонецЕсли;
				СтруктураПараметров = ОбменСКонтрагентамиВнутренний.ПолучитьДанныеВходящегоЭД(Новый ДвоичныеДанные(ФайлАрхива),
					СтруктураВложения.КодТранзакции, СтруктураВложения.УникальныйИД, СтруктураВложения.НомерЭД, КонтекстОперации);
				Если СтруктураПараметров.ПараметрыПриглашения <> Неопределено Тогда
					СтруктураПакетаЭД.СтатусПриглашения = СтруктураПараметров.ПараметрыПриглашения.СтатусПриглашения;
