&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	СистемнаяИнформация = Новый СистемнаяИнформация;
	
	Сообщение= Новый Массив;
	Сообщение.Добавить(НСтр("ru='Для работы с программой '"));
	Сообщение.Добавить(Новый ФорматированнаяСтрока(НСтр("ru='рекомендуется'"), Новый Шрифт( , , , Истина)));
	Сообщение.Добавить(НСтр("ru=' использовать версию'"));
	Сообщение.Добавить(Символы.ПС);
	Сообщение.Добавить(НСтр("ru='платформы ""1С:Предприятие 8"" не ниже '"));
	Сообщение.Добавить(Новый ФорматированнаяСтрока(Параметры.РекомендуемаяВерсияПлатформы, Новый Шрифт( , , Истина)));
	Сообщение.Добавить(Символы.ПС);
	Сообщение.Добавить(НСтр("ru='Сейчас используется версия '"));
	Сообщение.Добавить(СистемнаяИнформация.ВерсияПриложения);
	Сообщение.Добавить(НСтр("ru='.'"));
	
	Элементы.Версия.Заголовок = Новый ФорматированнаяСтрока(Сообщение);
	
	Элементы.ТекстСообщения.Заголовок = Параметры.ТекстСообщения;
	
КонецПроцедуры

